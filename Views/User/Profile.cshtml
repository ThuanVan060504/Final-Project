@{
    ViewData["Title"] = "Thông tin tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var hoTen = User.Identity.Name;
    var email = User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value;
    var role = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value;
}

<div class="container mt-5">
    <div class="row">
        <!-- Menu bên trái -->
        <div class="col-md-3 mb-4">
            <div class="list-group shadow rounded-3">
                <a href="#" class="list-group-item list-group-item-action active">
                    👤 Thông tin cá nhân
                </a>
                <a asp-controller="Order" asp-action="History" class="list-group-item list-group-item-action">
                    📜 Lịch sử mua hàng
                </a>
                <a asp-controller="Cart" asp-action="Index" class="list-group-item list-group-item-action">
                    🛒 Giỏ hàng đã thêm
                </a>
            </div>
        </div>

        <!-- Nội dung chính -->
        <div class="col-md-9">
            <div class="card shadow rounded-4">
                <div class="card-header bg-primary text-white text-center fs-4 fw-bold rounded-top-4">
                    👤 Thông tin người dùng
                </div>
                <div class="card-body p-4">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Họ tên:</label>
                        <div class="form-control">@hoTen</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Email:</label>
                        <div class="form-control">@email</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Vai trò:</label>
                        <div class="form-control">@role</div>
                    </div>
                </div>
                <div class="card-footer text-end">
                    <a asp-controller="Auth" asp-action="Logout" class="btn btn-danger">
                        🚪 Đăng xuất
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
