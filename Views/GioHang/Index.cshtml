@model List<Final_Project.Models.Shop.GioHangViewModel>

@{
    ViewData["Title"] = "Giỏ hàng";
    var tongTien = Model.Sum(m => m.ThanhTien);
}

<style>
    h2 {
        text-align: center;
        margin: 30px 0;
        color: #333;
    }

    .cart-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

        .cart-table th, .cart-table td {
            padding: 12px 16px;
            border-bottom: 1px solid #ddd;
            text-align: center;
        }

        .cart-table th {
            background-color: #f8f9fa;
            color: #333;
        }

        .cart-table img {
            width: 60px;
            height: auto;
            border-radius: 8px;
        }

    .form-control {
        width: 70px;
        padding: 5px;
        text-align: center;
    }

    .btn-sm {
        padding: 5px 10px;
        font-size: 0.85rem;
        margin-left: 4px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

    .btn-checkout {
        margin-top: 30px;
        padding: 10px 20px;
        background-color: #28a745;
        color: white;
        font-size: 1rem;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        display: block;
        margin-left: auto;
    }

    .alert {
        padding: 10px 15px;
        margin: 10px auto;
        max-width: 800px;
        border-radius: 5px;
        background-color: #d1e7dd;
        color: #0f5132;
        border: 1px solid #badbcc;
        text-align: center;
    }

    .tong-tien {
        font-weight: bold;
        font-size: 1.1rem;
        color: #dc3545;
    }

    .footer-row td {
        text-align: right;
        padding-right: 30px;
    }
</style>



@if (TempData["Success"] != null)
{
    <div class="alert">@TempData["Success"]</div>
}

<form asp-action="CapNhatNhieu" method="post" id="formGioHang">
    <table class="cart-table">
        <thead>
            <tr>
                <th><input type="checkbox" id="checkAll" /></th>
                <th>Ảnh</th>
                <th>Tên SP</th>
                <th>Đơn giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="chonSP" value="@item.MaSP" class="chon-checkbox" />
                    </td>
                    <td><img src="@item.ImageURL" alt="@item.TenSP" /></td>
                    <td>@item.TenSP</td>
                    <td>@item.DonGia.ToString("n0") ₫</td>
                    <td>
                        <input type="number" name="soLuong[@item.MaSP]" value="@item.SoLuong" min="1" class="form-control" />
                    </td>
                    <td>@item.ThanhTien.ToString("n0") ₫</td>
                    <td>
                        <button type="submit" formaction="/GioHang/XoaKhoiGio?maSP=@item.MaSP" class="btn-sm btn-danger">🗑 Xóa</button>
                    </td>
                </tr>
            }

            <tr class="footer-row">
                <td colspan="4"><strong>Tổng tiền:</strong></td>
                <td class="tong-tien" colspan="2">@tongTien.ToString("n0") ₫</td>
            </tr>
            <tr>
                <td colspan="7" style="text-align: right;">
                    <button type="submit" formaction="/GioHang/CapNhatNhieu" class="btn-sm btn-primary">🔄 Cập nhật số lượng</button>
                    <button type="submit" formaction="/GioHang/XoaNhieu" class="btn-sm btn-danger">🗑 Xóa đã chọn</button>
                </td>
            </tr>
        </tbody>
    </table>
</form>
<!-- ✅ Giữ đúng 1 form này -->
<form id="formThanhToan" asp-action="ThanhToan" method="post">
    <!-- Nút mở modal -->
    <button type="button" class="btn-checkout" onclick="moModalXacNhan()">💳 Thanh toán</button>
</form>


<!-- Modal xác nhận địa chỉ mặc định -->
<div class="modal fade" id="xacNhanDiaChiModal" tabindex="-1" aria-labelledby="xacNhanDiaChiLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-warning" id="xacNhanDiaChiLabel">📍 Xác nhận địa chỉ giao hàng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có muốn giao đến địa chỉ mặc định sau không?</p>
                <div id="diaChiMacDinh">
                    <!-- Địa chỉ sẽ được gắn bằng JS -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">❌ Hủy</button>
                <button type="submit" form="formThanhToan" class="btn btn-success">✅ Xác nhận thanh toán</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        function moModalXacNhan() {
            fetch('/GioHang/LayDiaChiMacDinh')
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        document.getElementById("diaChiMacDinh").innerHTML =
                            <div><strong>Địa chỉ:</strong> ${data.diaChiChiTiet}</div>
                            <div><strong>Phường/Xã:</strong> ${data.phuongXa}</div>
                            <div><strong>Quận/Huyện:</strong> ${data.quanHuyen}</div>
                            <div><strong>Tỉnh/TP:</strong> ${data.tinhTP}</div>
                        ;
                        var modal = new bootstrap.Modal(document.getElementById("xacNhanDiaChiModal"));
                        modal.show();
                    } else {
                        alert("Không tìm thấy địa chỉ mặc định. Hãy thêm địa chỉ trước khi thanh toán.");
                    }
                });
        }
              document.getElementById("checkAll").addEventListener("change", function () {
            const checkboxes = document.querySelectorAll(".chon-checkbox");
            checkboxes.forEach(cb => cb.checked = this.checked);
        });
                const btnCapNhat = document.querySelector('button[formaction="/GioHang/CapNhatNhieu"]');
        const btnXoaNhieu = document.querySelector('button[formaction="/GioHang/XoaNhieu"]');

        document.querySelectorAll('.chon-checkbox').forEach(cb => {
            cb.addEventListener('change', function () {
                const isChecked = document.querySelectorAll('.chon-checkbox:checked').length > 0;
                btnCapNhat.disabled = !isChecked;
                btnXoaNhieu.disabled = !isChecked;
            });
        });

    </script>
}