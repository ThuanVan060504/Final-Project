@model List<Final_Project.Models.Shop.GioHangViewModel>

@{
    ViewData["Title"] = "Giỏ hàng";
    var tongTien = Model.Sum(m => m.ThanhTien);
}

<style>
    h2 {
        text-align: center;
        margin: 30px 0;
        color: #333;
    }

    .cart-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

        .cart-table th, .cart-table td {
            padding: 12px 16px;
            border-bottom: 1px solid #ddd;
            text-align: center;
        }

        .cart-table th {
            background-color: #f8f9fa;
            color: #333;
        }

        .cart-table img {
            width: 60px;
            height: auto;
            border-radius: 8px;
        }

    .form-control {
        width: 70px;
        padding: 5px;
        text-align: center;
    }

    .btn-sm {
        padding: 5px 10px;
        font-size: 0.85rem;
        margin-left: 4px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

    .btn-checkout {
        margin-top: 30px;
        padding: 10px 20px;
        background-color: #28a745;
        color: white;
        font-size: 1rem;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        display: block;
        margin-left: auto;
    }

    .alert {
        padding: 10px 15px;
        margin: 10px auto;
        max-width: 800px;
        border-radius: 5px;
        background-color: #d1e7dd;
        color: #0f5132;
        border: 1px solid #badbcc;
        text-align: center;
    }

    .tong-tien {
        font-weight: bold;
        font-size: 1.1rem;
        color: #dc3545;
    }

    .footer-row td {
        text-align: right;
        padding-right: 30px;
    }
</style>



@if (TempData["Success"] != null)
{
    <div class="alert">@TempData["Success"]</div>
}

<table class="cart-table">
    <thead>
        <tr>
            <th>Ảnh</th>
            <th>Tên SP</th>
            <th>Đơn giá</th>
            <th>Số lượng</th>
            <th>Thành tiền</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><img src="@item.ImageURL" alt="@item.TenSP" /></td>
                <td>@item.TenSP</td>
                <td>@item.DonGia.ToString("n0") ₫</td>
                <td>
                    <form asp-action="CapNhatSoLuong" method="post" style="display:inline-flex; justify-content:center;">
                        <input type="hidden" name="maSP" value="@item.MaSP" />
                        <input type="number" name="soLuong" value="@item.SoLuong" min="1" class="form-control" />
                        <button type="submit" class="btn-sm btn-primary">Xác nhận</button>
                    </form>
                </td>
                <td>@item.ThanhTien.ToString("n0") ₫</td>
                <td>
                    <form asp-action="XoaKhoiGio" method="post">
                        <input type="hidden" name="maSP" value="@item.MaSP" />
                        <button type="submit" class="btn-sm btn-danger">🗑Xóa</button>
                    </form>
                </td>
            </tr>
        }
        <tr class="footer-row">
            <td colspan="4"><strong>Tổng tiền:</strong></td>
            <td class="tong-tien" colspan="2">@tongTien.ToString("n0") ₫</td>
        </tr>
    </tbody>
</table>
<!-- ✅ Giữ đúng 1 form này -->
<form id="formThanhToan" asp-action="ThanhToan" method="post">
    <!-- Nút mở modal -->
    <button type="button" class="btn-checkout" onclick="moModalXacNhan()">💳 Thanh toán</button>
</form>


<!-- Modal xác nhận địa chỉ mặc định -->
<div class="modal fade" id="xacNhanDiaChiModal" tabindex="-1" aria-labelledby="xacNhanDiaChiLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-warning" id="xacNhanDiaChiLabel">📍 Xác nhận địa chỉ giao hàng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có muốn giao đến địa chỉ mặc định sau không?</p>
                <div id="diaChiMacDinh">
                    <!-- Địa chỉ sẽ được gắn bằng JS -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">❌ Hủy</button>
                <button type="submit" form="formThanhToan" class="btn btn-success">✅ Xác nhận thanh toán</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        function moModalXacNhan() {
            fetch('/GioHang/LayDiaChiMacDinh')
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        document.getElementById("diaChiMacDinh").innerHTML = `
                            <div><strong>Địa chỉ:</strong> ${data.diaChiChiTiet}</div>
                            <div><strong>Phường/Xã:</strong> ${data.phuongXa}</div>
                            <div><strong>Quận/Huyện:</strong> ${data.quanHuyen}</div>
                            <div><strong>Tỉnh/TP:</strong> ${data.tinhTP}</div>
                        `;
                        var modal = new bootstrap.Modal(document.getElementById("xacNhanDiaChiModal"));
                        modal.show();
                    } else {
                        alert("Không tìm thấy địa chỉ mặc định. Hãy thêm địa chỉ trước khi thanh toán.");
                    }
                });
        }
    </script>
}
