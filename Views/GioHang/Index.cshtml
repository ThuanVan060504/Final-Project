@model List<Final_Project.Models.Shop.GioHangViewModel>

@{
    ViewData["Title"] = "Giỏ hàng của bạn";
}

@if (Model.Count == 0)
{
    <p>Không có sản phẩm nào trong giỏ.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Hình</th>
                <th>Tên sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@item.ImageURL" width="60" /></td>
                    <td>@item.TenSP</td>
                    <td>@item.SoLuong</td>
                    <td>@item.DonGia.ToString("n0") đ</td>
                </tr>
            }
        </tbody>
    </table>
}
