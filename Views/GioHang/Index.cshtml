@model List<Final_Project.Models.Shop.GioHangViewModel>

@{
    ViewData["Title"] = "Giỏ hàng";
    var tongTien = Model.Sum(m => m.ThanhTien);
}

<style>
   /* ==== Tiêu đề ==== */
h2 {
    text-align: center;
    margin: 30px 0;
    color: #ff9e4f;
    font-weight: 700;
    transition: color 0.3s ease, transform 0.2s ease;
}
h2:hover {
    color: #ff7b1a;
    transform: translateY(-2px);
}

/* ==== Bảng giỏ hàng ==== */
.cart-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.08);
    border-radius: 8px;
    overflow: hidden;
}
.cart-table th,
.cart-table td {
    padding: 12px 16px;
    border-bottom: 1px solid #f0f0f0;
    text-align: center;
    vertical-align: middle;
}
.cart-table th {
    background: linear-gradient(90deg, #ff9e4f, #ff7b1a);
    color: #fff;
    font-weight: 600;
    font-size: 0.95rem;
}
.cart-table img {
    width: 60px;
    height: auto;
    border-radius: 8px;
}

/* ==== Input số lượng ==== */
.form-controls {
    width: 70px;
    padding: 6px;
    text-align: center;
    border: 1px solid #ddd;
    border-radius: 6px;
    outline: none;
    transition: border-color 0.2s ease;
}
.form-controls:focus {
    border-color: #ff9e4f;
    box-shadow: 0 0 5px rgba(255,158,79,0.4);
}

/* ==== Nút bấm ==== */
.btn-sm {
    padding: 6px 12px;
    font-size: 0.85rem;
    margin-left: 4px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background 0.25s ease, transform 0.15s ease;
}
.btn-sm:hover {
    transform: translateY(-1px);
}

/* Cam */
.btn-primary {
    background-color: #ff9e4f;
    color: white;
}
.btn-primary:hover {
    background-color: #ff7b1a;
}

/* Đỏ */
.btn-danger {
    background-color: #dc3545;
    color: white;
}
.btn-danger:hover {
    background-color: #b02a37;
}

/* Nút Thanh toán */
.btn-checkout {
    margin-top: 30px;
    padding: 12px 24px;
    background-color: #ff9e4f;
    color: white;
    font-size: 1rem;
    font-weight: 600;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    display: inline-block;
    transition: background 0.25s ease, transform 0.15s ease;
}
.btn-checkout:hover {
    background-color: #ff7b1a;
    transform: translateY(-2px);
}

/* ==== Alert ==== */
.alert {
    padding: 10px 15px;
    margin: 10px auto;
    max-width: 800px;
    border-radius: 5px;
    background-color: #fff4eb;
    color: #8a4a00;
    border: 1px solid #ffddb9;
    text-align: center;
}

/* ==== Tổng tiền ==== */
.tong-tien {
    font-weight: bold;
    font-size: 1.1rem;
    color: #ff5722;
}

/* ==== Footer row ==== */
.footer-row td {
    text-align: right;
    padding-right: 30px;
}

</style>

@if (TempData["Success"] != null)
{
    <div class="alert">@TempData["Success"]</div>
}

<form asp-action="CapNhatNhieu" method="post" id="formGioHang">
    <table class="cart-table">
        <thead>
            <tr>
                <th><input type="checkbox" id="checkAll" /></th>
                <th>Ảnh</th>
                <th>Tên SP</th>
                <th>Đơn giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><input type="checkbox" name="chonSP" value="@item.MaSP" class="chon-checkbox" /></td>
                    <td><img src="@item.ImageURL" alt="@item.TenSP" /></td>
                    <td>@item.TenSP</td>
                    <td>
                        @if (item.DiscountPercent.HasValue)
                        {
                            <span class="text-danger fw-bold">@item.DonKhuyenMai.ToString("n0") ₫</span>
                            <br />
                            <span class="text-decoration-line-through text-muted" style="font-size: 0.85em;">
                                @item.DonGia.ToString("n0") ₫
                            </span>
                        }
                        else
                        {
                            <span class="text-dark">@item.DonGia.ToString("n0") ₫</span>
                        }
                    </td>

                    <td><input type="number" name="soLuong[@item.MaSP]" value="@item.SoLuong" min="1" class="form-controls" /></td>
                    <td>@item.ThanhTien.ToString("n0") ₫</td>
                    <td>
                        <button type="submit" formaction="/GioHang/XoaKhoiGio?maSP=@item.MaSP" class="btn-sm btn-danger">🗑 Xóa</button>
                    </td>
                </tr>
            }

            <tr class="footer-row">
                <td colspan="4"><strong>Tổng tiền:</strong></td>
                <td class="tong-tien" colspan="2">@tongTien.ToString("n0") ₫</td>
            </tr>
            <tr>
                <td colspan="7" style="text-align: right;">
                    <button type="submit" formaction="/GioHang/CapNhatNhieu" class="btn-sm btn-primary">🔄 Cập nhật số lượng</button>
                    <button type="submit" formaction="/GioHang/XoaNhieu" class="btn-sm btn-danger">🗑 Xóa đã chọn</button>
                 <!-- nút Thanh toán -->
                <button type="submit" formaction="/ThanhToan/XacNhanThanhToan" class="btn-checkout">💳 Thanh toán</button>

                </td>
            </tr>
        </tbody>
    </table>
</form>


@section Scripts {
    <script>
           window.addEventListener("DOMContentLoaded", function () {
            // Tick tất cả checkbox khi vừa vào trang
            document.getElementById("checkAll").checked = true;

            let checkboxes = document.querySelectorAll(".chon-checkbox");
            checkboxes.forEach(cb => cb.checked = true);

            // Khi tick/bỏ chọn checkbox "chọn tất cả"
            document.getElementById("checkAll").addEventListener("change", function () {
                checkboxes.forEach(cb => cb.checked = this.checked);
            });

            // Nếu bỏ tick một ô => bỏ tick "Chọn tất cả"
            checkboxes.forEach(cb => {
                cb.addEventListener("change", function () {
                    const allChecked = document.querySelectorAll(".chon-checkbox:checked").length === checkboxes.length;
                    document.getElementById("checkAll").checked = allChecked;
                });
            });
        });
    </script>
}

