@model Final_Project.Models.User.ForgotPasswordViewModel

@{
    Layout = null;
    ViewData["Title"] = "Quên mật khẩu";
}
<link rel="stylesheet" href="~/css/dangky.css" />

<div class="auth-container">
    <h2 class="auth-title">📧 Quên mật khẩu</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert success">@TempData["Message"]</div>
    }

    @if (ViewData.ModelState.ErrorCount > 0)
    {
        <div class="alert error">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@error.ErrorMessage</div>
            }
        </div>
    }

    <form asp-action="ForgotPassword" method="post" class="auth-form">
        <div class="auth-box">
            <input asp-for="Email" placeholder=" " class="auth-input" />
            <label asp-for="Email" class="auth-label">Nhập email để khôi phục</label>
            <span asp-validation-for="Email" class="text-danger small"></span>
        </div>

        <button type="submit" class="auth-button">Gửi liên kết khôi phục</button>
    </form>

    <p class="auth-switch">Quay lại <a href="/Dangnhap">Đăng nhập</a></p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
