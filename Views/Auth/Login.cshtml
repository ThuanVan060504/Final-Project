@model Final_Project.Models.User.LoginViewModel

@{
    Layout = null;
    ViewData["Title"] = "Đăng nhập";
}

<link rel="stylesheet" href="~/css/dangky.css" />

<div class="auth-container">
    <h2 class="auth-title">🔐 Đăng nhập</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert success">@TempData["Success"]</div>
    }

    @if (ViewData.ModelState.ErrorCount > 0)
    {
        <div class="alert error">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@error.ErrorMessage</div>
            }
        </div>
    }

    <form asp-controller="Auth" asp-action="Login" method="post" class="auth-form">
        <div class="auth-box">
            <input asp-for="Email" placeholder=" " class="auth-input" />
            <label asp-for="Email" class="auth-label">Email</label>
            <span asp-validation-for="Email" class="text-danger small"></span>
        </div>

        <div class="auth-box">
            <input asp-for="MatKhau" type="password" placeholder=" " class="auth-input" />
            <label asp-for="MatKhau" class="auth-label">Mật khẩu</label>
            <span asp-validation-for="MatKhau" class="text-danger small"></span>
        </div>

        <div class="auth-options">
               <a asp-controller="Auth" asp-action="ForgotPassword"> Quên mật khẩu?</a>
        </div>

        <button type="submit" class="auth-button">Đăng nhập</button>
    </form>

    <p class="auth-switch">
        Chưa có tài khoản?
        <a asp-controller="Auth" asp-action="Register">Đăng ký</a>
    </p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
