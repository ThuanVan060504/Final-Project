@model IEnumerable<Final_Project.Models.Shop.FlashSale>

@{
    ViewData["Title"] = "Flash Sale";
}

<div class="flashy-alert">
    <h2 class="flashy-title">🔥 FLASH SALE 🔥</h2>
    <p class="flashy-sub">Các sản phẩm đang giảm giá sốc trong 6 giờ!</p>
</div>

<link rel="stylesheet" href="~/css/flashsale.css" />

<div class="row g-4">
    @foreach (var flashSale in Model)
    {
        var sp = flashSale.SanPham;
        var giaGoc = sp.GiaGoc ?? sp.DonGia / (1 - flashSale.DiscountPercent / 100m);

        <div class="col-12 col-sm-6 col-lg-4">
            <div class="card h-100 shadow-sm position-relative floating-effect">
                <div class="flashsale-badge flash-animate">
                    ⚡ FLASH SALE
                    <span class="badge-percent">-@flashSale.DiscountPercent%</span>
                </div>

                <img src="@sp.ImageURL"
                     class="card-img-top"
                     style="height: 220px; object-fit: cover;"
                     alt="@sp.TenSP" />

                <div class="card-body text-center d-flex flex-column">
                    <h5 class="card-title">@sp.TenSP</h5>
                    <p>
                        <span class="text-danger fw-bold fs-4 text-flash">
                            @sp.DonGia.ToString("N0") đ
                        </span><br />
                        <small>
                            <del class="text-secondary fs-6">@giaGoc.ToString("N0") đ</del>
                        </small>
                    </p>
                    <p class="sale-time mt-auto fs-6">
                        <span class="start-time text-info fw-semibold fs-6">
                            🔔 Bắt đầu: @flashSale.ThoiGianBatDau.ToString("dd/MM/yyyy HH:mm")
                        </span><br />
                        ⏳ <span class="countdown fw-bold text-success fs-5"
                                data-endtime="@flashSale.ThoiGianKetThuc.ToString("o")"></span>
                    </p>
                    <a href="/SanPham/Details/@sp.MaSP" class="btn btn-warning btn-buy-hover mt-3">🛒 Mua ngay</a>
                </div>
            </div>
        </div>
    }
</div>


<script src="~/js/flashsale.js"></script>
