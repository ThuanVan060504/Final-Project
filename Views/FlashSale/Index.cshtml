@model Final_Project.Models.ViewModels.FlashSalePageViewModel
@{
    ViewData["Title"] = "Flash Sale";
}

<style>
    /* ==================================================================
        ✅ YÊU CẦU 1: Hiệu ứng nháy màu (Keyframes)
        ==================================================================
        */
    @@keyframes flashing-badge {
        0% {
            background-color: #ff424e;
        }
        /* 1. Đỏ */
        25% {
            background-color: #ff9f1c;
        }
        /* 2. Cam */
        50% {
            background-color: #27ae60;
        }
        /* 3. Xanh lá */
        75% {
            background-color: #2980b9;
        }
        /* 4. Xanh dương */
        100% {
            background-color: #ff424e;
        }
        /* 5. Về lại Đỏ */
    }


    /* Header (Tiêu đề + Đồng hồ) */
    .flash-sale-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 25px;
        background: linear-gradient(90deg, #ff424e 0%, #ff6a5a 100%);
        border-radius: 8px;
        margin-bottom: 25px;
        box-shadow: 0 4px 15px rgba(255, 66, 78, 0.2);
    }

    .flash-sale-title {
        font-size: 28px;
        font-weight: 700;
        color: #ffffff;
        text-transform: uppercase;
        text-shadow: 1px 1px 3px rgba(0,0,0,0.1);
    }

    .countdown-timer {
        font-size: 20px;
        font-weight: bold;
        color: #ffffff;
    }

        .countdown-timer span {
            background-color: rgba(0, 0, 0, 0.2);
            color: white;
            padding: 8px 12px;
            border-radius: 5px;
            margin: 0 3px;
            min-width: 40px;
            display: inline-block;
            text-align: center;
        }

    /* Lưới sản phẩm (Grid) - Responsive 4-5 cột */
    .flash-sale-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
    }

    @@media (min-width: 768px) {
        .flash-sale-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    @@media (min-width: 992px) {
        .flash-sale-grid {
            grid-template-columns: repeat(4, 1fr);
        }
    }

    @@media (min-width: 1400px) {
        .flash-sale-grid {
            grid-template-columns: repeat(5, 1fr);
        }
    }


    /* Thẻ sản phẩm (Card) */
    .flash-product-card {
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        overflow: hidden;
        text-decoration: none;
        color: #333;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: flex;
        flex-direction: column;
        background: #ffffff;
        position: relative;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }

        .flash-product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.1);
        }

    .flash-product-image {
        width: 100%;
        height: 220px;
        object-fit: cover;
        border-bottom: 1px solid #f0f0f0;
    }

    /* ==================================================================
        ✅ YÊU CẦU 1: Áp dụng hiệu ứng nháy màu
        ==================================================================
        */
    .discount-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        color: white;
        font-size: 14px;
        font-weight: bold;
        padding: 4px 8px;
        border-radius: 4px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        /* Áp dụng animation */
        animation-name: flashing-badge;
        animation-duration: 4s; /* Tốc độ: 4 giây 1 vòng lặp */
        animation-iteration-count: infinite; /* Lặp lại vô hạn */
    }


    .flash-product-info {
        padding: 15px;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        min-height: 150px;
    }

    .flash-product-name {
        font-size: 16px;
        font-weight: 600;
        margin-bottom: 10px;
        height: 40px;
        overflow: hidden;
        color: #222;
    }

    /* ==================================================================
        ✅ YÊU CẦU 2: Giá bán xếp chồng (trên-dưới)
        ==================================================================
        */
    .flash-product-price .sale-price {
        font-size: 20px;
        font-weight: 700;
        color: #ff424e;
        display: block; /* Ở trên */
    }

    .flash-product-price .original-price {
        font-size: 14px;
        color: #888;
        text-decoration: line-through;
        display: block; /* Ở dưới */
        margin-top: 2px;
    }


    /* Thanh tiến trình (Progress Bar) */
    .progress-bar-container {
        margin-top: auto;
        padding-top: 10px;
    }

    .progress-bar {
        background-color: #ffe0e0;
        border-radius: 20px;
        height: 20px;
        width: 100%;
        overflow: hidden;
        position: relative;
        border: 1px solid #ffc0c0;
    }

    .progress-filled {
        background: linear-gradient(90deg, #ff6a5a 0%, #ff424e 100%);
        height: 100%;
        border-radius: 20px;
        transition: width 0.5s ease;
    }

    .progress-text {
        position: absolute;
        width: 100%;
        text-align: center;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-size: 12px;
        font-weight: 600;
        color: #fff;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
    }

    .no-sale {
        text-align: center;
        font-size: 20px;
        color: #888;
        padding: 50px;
    }
</style>


@if (Model != null && Model.SanPhams.Any())
{
    <div class="flash-sale-container">
        <div class="flash-sale-header">
            <div class="flash-sale-title">@Model.TenDot</div>
            <div class="countdown-timer"
                 id="countdown-timer"
                 data-end-time="@Model.ThoiGianKetThuc.ToString("o")">
                Kết thúc trong:
                <span id="days">00</span>:
                <span id="hours">00</span>:
                <span id="minutes">00</span>:
                <span id="seconds">00</span>
            </div>
        </div>

        <div class="flash-sale-grid">
            @foreach (var product in Model.SanPhams)
            {
                <a asp-controller="SanPham" asp-action="Details" asp-route-id="@product.MaSP" class="flash-product-card">
                    <img src="@product.ImageURL" alt="@product.TenSP" class="flash-product-image" />

                    <div class="discount-badge">-@product.PhanTramGiam%</div>

                    <div class="flash-product-info">
                        <div class="flash-product-name">@product.TenSP</div>

                        <div class="flash-product-price">
                            <span class="sale-price">@product.GiaSauGiam.ToString("N0") đ</span>
                            <span class="original-price">@product.DonGiaGoc.ToString("N0") đ</span>
                        </div>

                        <div class="progress-bar-container">
                            <div class="progress-bar">
                                <div class="progress-filled" style="width: @product.PhanTramDaBan%;"></div>
                                <div class="progress-text">@product.ProgressBarText</div>
                            </div>
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>
}
else
{
    <div class="no-sale">
        Rất tiếc, hiện tại không có đợt Flash Sale nào đang diễn ra.
        <br />
        Vui lòng quay lại sau!
    </div>
}

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const countdownElement = document.getElementById("countdown-timer");
            if (!countdownElement) return;

            const endTimeString = countdownElement.getAttribute("data-end-time");
            const endTime = new Date(endTimeString).getTime();

            const timerInterval = setInterval(updateTimer, 1000);

            function updateTimer() {
                const now = new Date().getTime();
                const distance = endTime - now;

                if (distance < 0) {
                    clearInterval(timerInterval);
                    countdownElement.innerHTML = "ĐÃ KẾT THÚC";
                    return;
                }

                const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((distance % (1000 * 60)) / 1000);

                document.getElementById("days").innerText = String(days).padStart(2, '0');
                document.getElementById("hours").innerText = String(hours).padStart(2, '0');
                document.getElementById("minutes").innerText = String(minutes).padStart(2, '0');
                document.getElementById("seconds").innerText = String(seconds).padStart(2, '0');
            }

            updateTimer();
        });
    </script>
}