    border-radius: 8px;
    border: 1px solid #ddd;
    transition: all 0.3s ease;
}
textarea.form-control:focus {
    border-color: #ff9e4f;
    box-shadow: 0 0 6px rgba(255, 158, 79, 0.4);
}

/* Nút gửi */
.btn-primary {
    background-color: #ff9e4f;
    border: none;
    border-radius: 8px;
    padding: 8px 20px;
    font-weight: 600;
    transition: all 0.3s ease;
}
.btn-primary:hover {
    background-color: #ff7f1f;
    box-shadow: 0 4px 10px rgba(255, 158, 79, 0.4);
}
label.btn.btn-outline-warning {
    margin: 10px;
}
</style>
