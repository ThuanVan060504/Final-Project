@using Final_Project.Models.Shop
@model SanPham
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    var flashSale = ViewBag.FlashSale as Final_Project.Models.Shop.ChiTietFlashSale;
}

<style>
    .flash-sale-countdown-detail {
        background: #fff8f8;
        border: 1px dashed #ff424e;
        border-radius: 8px;
        padding: 15px;
        margin-top: 1.5rem;
        font-size: 1.2rem;
        font-weight: 700;
        color: #d9534f;
    }

        .flash-sale-countdown-detail span.timer-box {
            background: #333;
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
            margin: 0 3px;
            font-size: 1.2rem;
        }
</style>


<div class="container mt-5">
    <div class="row align-items-center">
        <div class="col-lg-6 text-center mb-4 mb-lg-0">
            <img src="@Model.ImageURL" class="img-fluid rounded shadow-sm"
                 style="max-height: 500px; width: 100%; object-fit: contain;" alt="@Model.TenSP" />
        </div>

        <div class="col-lg-6">
            <h2 class="product-detail__title">@Model.TenSP</h2>

            @* ⭐ Trung bình đánh giá *@
            @if (ViewBag.DiemTrungBinh > 0)
            {
                <div class="mt-1 d-flex align-items-center">
                    <span class="rating-star">★</span>
                    <strong class="fs-5">@ViewBag.DiemTrungBinh</strong>
                    <span class="text-muted ms-1">/ 5.0</span>
                    <span class="text-secondary fst-italic ms-3">(@ViewBag.DanhGiaList.Count đánh giá)</span>
                </div>
            }

            @if (flashSale != null)
            {
                <div class="mt-3">
                    <span class="product-detail__price">@flashSale.GiaSauGiam.ToString("N0") đ</span>
                    <span class="product-detail__price-old">@Model.DonGia.ToString("N0") đ</span>
                    <span class="badge bg-danger ms-2" style="font-size: 1.5rem; vertical-align: middle;">-@flashSale.PhanTramGiam%</span>
                </div>

                <div class="flash-sale-countdown-detail"
                     id="countdown-timer"
                     data-end-time="@flashSale.DotFlashSale.ThoiGianKetThuc.ToString("o")">
                    Kết thúc trong:
                    <span id="days" class="timer-box">00</span>:
                    <span id="hours" class="timer-box">00</span>:
                    <span id="minutes" class="timer-box">00</span>:
                    <span id="seconds" class="timer-box">00</span>
                </div>
            }
            else
            {
                <div class="mt-3">
                    <span class="product-detail__price">@Model.DonGia.ToString("N0") đ</span>
                </div>
            }
            <p class="product-detail__description">@Model.MoTa</p>

            <div class="product-detail__sizes">
                <h6>📐 Kích thước:</h6>
                <ul>
                    <li>Chiều rộng: <strong>@Model.ChieuRong</strong> cm</li>
                    <li>Chiều cao: <strong>@Model.ChieuCao</strong> cm</li>
                    <li>Chiều sâu: <strong>@Model.ChieuSau</strong> cm</li>
                </ul>
            </div>

            @{
                int soLuongBanDau = Model.SoLuong ?? 0;
                int soLuongDaBan = 0;

                if (ViewBag.SoLuongDaBan != null)
                {
                    var soldDict = (Dictionary<int, int>)ViewBag.SoLuongDaBan;
                    if (soldDict.ContainsKey(Model.MaSP))
                    {
                        soLuongDaBan = soldDict[Model.MaSP];
                    }
                }
                int soLuongTon = soLuongBanDau - soLuongDaBan;
            }

            @if (soLuongTon <= 0)
            {
                <div class="alert alert-danger mt-3 custom-alert">
                    Sản phẩm đã hết hàng. Vui lòng quay lại sau!
                </div>
            }
            else
            {
                <form asp-controller="GioHang" asp-action="ThemGioHang" method="post" class="mt-3">
                    <input type="hidden" name="maSP" value="@Model.MaSP" />
                    <label for="soLuong" class="form-label product-detail__qty-label">Số lượng:</label>
                    <div class="input-group product-detail__qty-input-group mb-3">
                        <button class="product-detail__qty-btn" type="button" onclick="thayDoiSoLuong(-1)">−</button>
                        <input type="number" id="soLuong" name="soLuong" class="form-control product-detail__qty-input" value="1" min="1" max="@soLuongTon" />
                        <button class="product-detail__qty-btn" type="button" onclick="thayDoiSoLuong(1)">+</button>
                    </div>
                    <button type="submit" class="product-detail__addcart-btn">Thêm vào giỏ hàng</button>
                </form>
            }

            <script>
                function thayDoiSoLuong(delta) {
                    const input = document.getElementById("soLuong");
                    let value = parseInt(input.value);
                    if (isNaN(value)) value = 1;
                    value += delta;
                    if (value < 1) value = 1;

                    let maxStock = parseInt(input.max);
                    if (value > maxStock) value = maxStock;
                    input.value = value;
                }

                document.addEventListener("DOMContentLoaded", function() {
                    const countdownElement = document.getElementById("countdown-timer");
                    if (!countdownElement) return;

                    const endTimeString = countdownElement.getAttribute("data-end-time");
                    const endTime = new Date(endTimeString).getTime();

                    const timerInterval = setInterval(updateTimer, 1000);

                    function updateTimer() {
                        const now = new Date().getTime();
                        const distance = endTime - now;

                        if (distance < 0) {
                            clearInterval(timerInterval);
                            countdownElement.innerHTML = "<span style='color: #d9534f;'>Đã kết thúc</span>";
                            return;
                        }

                        const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                        const seconds = Math.floor((distance % (1000 * 60)) / 1000);

                        document.getElementById("days").innerText = String(days).padStart(2, '0');
                        document.getElementById("hours").innerText = String(hours).padStart(2, '0');
                        document.getElementById("minutes").innerText = String(minutes).padStart(2, '0');
                        document.getElementById("seconds").innerText = String(seconds).padStart(2, '0');
                    }
                    updateTimer();
                });
            </script>

        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">

            @if (!string.IsNullOrEmpty(Model.ChiTiet))
            {
                <p class="product-detail__full-description">@Html.Raw(Model.ChiTiet)</p>
            }
        </div>
    </div>
</div>

@if (ViewBag.SanPhamTuongTu != null && ((List<SanPham>)ViewBag.SanPhamTuongTu).Any())
{
    <div class="mt-5 related-products">
        <h4 class="fw-bold text-dark mb-4 fs-4">🧡 Sản phẩm tương tự</h4>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
            @foreach (var item in (List<SanPham>)ViewBag.SanPhamTuongTu)
            {
                <div class="col">
                    <a asp-controller="SanPham" asp-action="Details" asp-route-id="@item.MaSP" class="text-decoration-none text-dark">
                        <div class="card h-100 border-0 shadow-sm">
                            <img src="@item.ImageURL" class="card-img-top" alt="@item.TenSP" />
                            <div class="card-body">
                                <h6 class="fw-semibold">@item.TenSP</h6>
                                <p class="text-danger fw-bold">@item.DonGia.ToString("N0") đ</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
}

<hr />
<h4 class="text-dark mt-5">Viết đánh giá</h4>

@if (!User.Identity.IsAuthenticated)
{
    <div class="alert alert-warning custom-alert">
        Bạn cần <a asp-controller="Auth" asp-action="Login">đăng nhập</a> để viết đánh giá.
    </div>
}
else
{
    <form method="post" asp-action="GuiDanhGia" class="review-form">
        <input type="hidden" name="SanPhamId" value="@Model.MaSP" />
        @{
            var tenNguoiDung = User.Claims.FirstOrDefault(c => c.Type == "HoTen")?.Value ?? User.Identity.Name ?? "Ẩn danh";
        }
        <input type="hidden" name="TenNguoiDung" value="@tenNguoiDung" />

        <div class="mb-3">
            <label class="form-label">Tên của bạn</label>
            <p class="text-muted"> <strong>@tenNguoiDung</strong></p>
        </div>

        <div class="mb-3">
            <label class="form-label">Chọn số sao</label>
            <div class="form-check form-check-inline">
                @for (int i = 5; i >= 1; i--)
                {
                    <input class="btn-check" type="radio" name="Diem" id="sao-@i" value="@i" @(i == 5 ? "checked" : "") />
                    <label class="btn btn-outline-warning" for="sao-@i">
                        @for (int j = 1; j <= i; j++)
                        {
                            <span>★</span>
                        }
                    </label>
                }
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Bình luận</label>
            <textarea name="BinhLuan" class="form-control" rows="3" required placeholder="Chia sẻ trải nghiệm của bạn..."></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Gửi đánh giá</button>
    </form>
}

<h4 class="mt-5 mb-3">Đánh giá từ người dùng:</h4>

@if (ViewBag.DanhGiaList != null && ((List<DanhGia>)ViewBag.DanhGiaList).Count > 0)
{
    @foreach (var dg in (List<DanhGia>)ViewBag.DanhGiaList)
    {
        <div class="user-review">
            <strong>@dg.TenNguoiDung</strong> - @dg.ThoiGian.ToString("dd/MM/yyyy HH:mm")<br />
            <span class="rating-star">⭐ @dg.Diem sao</span>
            <p class="mt-2">@dg.BinhLuan</p>
        </div>
    }
}
else
{
    <p class="text-muted fst-italic">Chưa có đánh giá nào.</p>
}

