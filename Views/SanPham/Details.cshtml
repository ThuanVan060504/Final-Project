@using Final_Project.Models.Shop
@model SanPham
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container mt-5">
    <div class="row align-items-center">
        <!-- Hình ảnh sản phẩm -->
        <div class="col-lg-6 text-center mb-4 mb-lg-0">
            <img src="@Model.ImageURL" class="img-fluid rounded shadow-sm"
                 style="max-height: 500px; width: 100%; object-fit: contain;" alt="@Model.TenSP" />
        </div>

        <!-- Thông tin sản phẩm -->
        <div class="col-lg-6">
            <h2 class="product-detail__title">@Model.TenSP</h2>
            
            @* ⭐ Trung bình đánh giá *@
            @if (ViewBag.DiemTrungBinh > 0)
            {
                <div class="mt-1 d-flex align-items-center">
                    <span class="rating-star">★</span>
                    <strong class="fs-5">@ViewBag.DiemTrungBinh</strong>
                    <span class="text-muted ms-1">/ 5.0</span>
                    <span class="text-secondary fst-italic ms-3">(@ViewBag.DanhGiaList.Count đánh giá)</span>
                </div>
            }

            <div class="mt-3">
                <span class="product-detail__price">@Model.DonGia.ToString("N0") đ</span>
                @if(Model.GiaGoc.HasValue)
                {
                    <span class="product-detail__price-old">@Model.GiaGoc.Value.ToString("N0") đ</span>
                }
            </div>

            <p class="product-detail__description">@Model.MoTa</p>

            <div class="product-detail__sizes">
                <h6>📐 Kích thước:</h6>
                <ul>
                    <li>Chiều rộng: <strong>@Model.ChieuRong</strong> cm</li>
                    <li>Chiều cao: <strong>@Model.ChieuCao</strong> cm</li>
                    <li>Chiều sâu: <strong>@Model.ChieuSau</strong> cm</li>
                </ul>
            </div>

            @{
                int soLuongBanDau = Model.SoLuong ?? 0;
                int soLuongDaBan = ViewBag.SoLuongDaBan != null && ((Dictionary<int, int>)ViewBag.SoLuongDaBan).ContainsKey(Model.MaSP)
                    ? ((Dictionary<int, int>)ViewBag.SoLuongDaBan)[Model.MaSP]
                    : 0;
                int soLuongTon = soLuongBanDau - soLuongDaBan;
            }

            @if (soLuongTon <= 0)
            {
                <div class="alert alert-danger mt-3 custom-alert">
                    ❌ Sản phẩm đã hết hàng. Vui lòng quay lại sau!
                </div>
            }
            else
            {
                <form asp-controller="GioHang" asp-action="ThemGioHang" method="post" class="mt-3">
                    <input type="hidden" name="maSP" value="@Model.MaSP" />
                    <label for="soLuong" class="form-label product-detail__qty-label">Số lượng:</label>
                    <div class="input-group product-detail__qty-input-group mb-3">
                        <button class="product-detail__qty-btn" type="button" onclick="thayDoiSoLuong(-1)">−</button>
                        <input type="number" id="soLuong" name="soLuong" class="form-control product-detail__qty-input" value="1" min="1" max="@soLuongTon" />
                        <button class="product-detail__qty-btn" type="button" onclick="thayDoiSoLuong(1)">+</button>
                    </div>
                    <button type="submit" class="product-detail__addcart-btn">Thêm vào giỏ hàng</button>
                </form>
            }

            <script>
                function thayDoiSoLuong(delta) {
                    const input = document.getElementById("soLuong");
                    let value = parseInt(input.value);
                    if (isNaN(value)) value = 1;
                    value += delta;
                    if (value < 1) value = 1;
                    if (value > parseInt(input.max)) value = parseInt(input.max);
                    input.value = value;
                }
            </script>

            
        </div>
    </div>

    <!-- Giới thiệu chi tiết sản phẩm -->
    <div class="row mt-5">
        <div class="col-12">
            
            <p class="product-detail__full-description">@Model.ChiTiet</p>
        </div>
    </div>
</div>

@if (ViewBag.SanPhamTuongTu != null && ((List<SanPham>)ViewBag.SanPhamTuongTu).Any())
{
    <div class="mt-5 related-products">
        <h4 class="fw-bold text-dark mb-4 fs-4">🧡 Sản phẩm tương tự</h4>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
            @foreach (var item in (List<SanPham>)ViewBag.SanPhamTuongTu)
            {
                <div class="col">
                    <a asp-controller="SanPham" asp-action="Details" asp-route-id="@item.MaSP" class="text-decoration-none text-dark">
                        <div class="card h-100 border-0 shadow-sm">
                            <img src="@item.ImageURL" class="card-img-top" alt="@item.TenSP" />
                            <div class="card-body">
                                <h6 class="fw-semibold">@item.TenSP</h6>
                                <p class="text-danger fw-bold">@item.DonGia.ToString("N0") đ</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
}

<hr />

<h4 class="text-dark mt-5">Viết đánh giá</h4>

@if (!User.Identity.IsAuthenticated)
{
    <div class="alert alert-warning custom-alert">
        Bạn cần <a asp-controller="Auth" asp-action="Login">đăng nhập</a> để viết đánh giá.
    </div>
}
else
{
    <form method="post" asp-action="GuiDanhGia" class="review-form">
        <input type="hidden" name="SanPhamId" value="@Model.MaSP" />
        @{
            var tenNguoiDung = User.Identity.Name ?? "Ẩn danh";
        }
        <input type="hidden" name="TenNguoiDung" value="@tenNguoiDung" />

        <div class="mb-3">
            <label class="form-label">Tên của bạn</label>
            <p class="text-muted"> <strong>@tenNguoiDung</strong></p>
        </div>

        <div class="mb-3">
            <label class="form-label">Chọn số sao</label>
            <div class="form-check form-check-inline">
                @for (int i = 5; i >= 1; i--)
                {
                    <input class="btn-check" type="radio" name="Diem" id="sao-@i" value="@i" @(i == 5 ? "checked" : "") />
                    <label class="btn btn-outline-warning" for="sao-@i">
                        @for (int j = 1; j <= i; j++)
                        {
                            <span>★</span>
                        }
                    </label>
                }
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Bình luận</label>
            <textarea name="BinhLuan" class="form-control" rows="3" required placeholder="Chia sẻ trải nghiệm của bạn..."></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Gửi đánh giá</button>
    </form>
}

<h4 class="mt-5 mb-3">Đánh giá từ người dùng:</h4>

@if (ViewBag.DanhGiaList != null && ViewBag.DanhGiaList.Count > 0)
{
    @foreach (var dg in ViewBag.DanhGiaList)
    {
        <div class="user-review">
            <strong>@dg.TenNguoiDung</strong> - @dg.ThoiGian.ToString("dd/MM/yyyy HH:mm")<br />
            <span class="rating-star">⭐ @dg.Diem sao</span>
            <p class="mt-2">@dg.BinhLuan</p>
        </div>
    }
}
else
{
    <p class="text-muted fst-italic">Chưa có đánh giá nào.</p>
}

<style>
    h2 {
    font-size: 20px;
}
   :root {
    --primary-color: #ff9e4f;
    --primary-hover: #e78538;
    --text-dark: #333;
    --bg-light: #fffaf5;
    --border-radius: 12px;
    --shadow-light: rgba(0, 0, 0, 0.1);
    --shadow-hover: rgba(0, 0, 0, 0.15);
}

/* Body & font */
body {
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    background-color: #fefefe;
    color: var(--text-dark);
}

/* Tiêu đề sản phẩm */
.product-detail__title {
    font-size: 4rem;
    color: var(--primary-color);
    font-weight: 700;
}

/* Giá sản phẩm */
.product-detail__price {
    color: var(--primary-color);
    font-weight: 700;
    font-size: 3.6rem;
}

.product-detail__price-old {
    color: #999;
    text-decoration: line-through;
    margin-left: 15px;
    font-weight: 500;
    font-size: 2rem;
}

/* Mô tả ngắn */
.product-detail__description {
    font-size: 2rem;
    line-height: 1.6;
    color: #666;
    margin-top: 1rem;
}

/* Thông số kích thước */
.product-detail__sizes {
    margin-top: 1.5rem;
    color: #666;
}

.product-detail__sizes h6 {
    font-weight: 600;
    margin-bottom: 2.5rem;
}

.product-detail__sizes ul {
    list-style: none;
    padding-left: 0;
}

.product-detail__sizes ul li {
    margin-bottom: 6px;
}

/* Số lượng & nút thêm giỏ hàng */
.product-detail__qty-label {
    font-weight: 600;
    font-size: 2.5rem;
    margin-bottom: 0.3rem;
}

.product-detail__qty-input-group {
    width: 160px;
    border-radius: var(--border-radius);
    overflow: hidden;
    box-shadow: 0 0 4px var(--shadow-light);
    font-size: 3rem;
}
input#soLuong {
    font-size: 3rem;
}
.product-detail__qty-btn {
    font-weight: 700;
    background: #f8f8f8;
    border: none;
    transition: background-color 0.2s ease;
    cursor: pointer;
}

.product-detail__qty-btn:hover {
    background-color: var(--primary-hover);
    color: #fff;
}

.product-detail__qty-input {
    text-align: center;
    border: none;
    font-weight: 600;
    font-size: 1rem;
}

/* Nút Thêm vào giỏ hàng */
.product-detail__addcart-btn {
    background-color: var(--primary-color);
    border: none;
    font-size: 2.1rem;
    font-weight: 700;
    border-radius: var(--border-radius);
    padding: 0.5rem 2.5rem;
    margin-top: 1.5rem;
    transition: all 0.3s ease;
    box-shadow: 0 3px 8px var(--shadow-light);
    cursor: pointer;
    color: white;
}
.row.align-items-center {
    margin-top: 7%;
}
h5.fw-bold.mb-3 {
    font-size: 2rem;
}
.product-detail__addcart-btn:hover {
    background-color: var(--primary-hover);
    box-shadow: 0 5px 15px rgba(255, 158, 79, 0.5);
    transform: translateY(-3px);
}

/* Accordion phương thức thanh toán */
.payment-accordion .accordion-item {
    border: none;
    border-radius: var(--border-radius);
    margin-bottom: 15px;
    box-shadow: 0 2px 8px var(--shadow-light);
    overflow: hidden;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.payment-accordion .accordion-item:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 20px var(--shadow-hover);
}

.payment-accordion .accordion-button {
    font-weight: 700;
    padding: 1rem 1.5rem;
    background-color: #fff;
    border: none;
    color: inherit;
    transition: background-color 0.25s ease, color 0.25s ease;
}

.payment-accordion .accordion-button:not(.collapsed) {
    background-color: #fef8f0;
    color: var(--text-dark);
    box-shadow: inset 0 -2px 0 var(--primary-color);
}

.payment-accordion .accordion-body {
    background-color: #fffaf5;
    font-size: 0.95rem;
    line-height: 1.6;
    padding: 1rem 1.5rem;
    border-left: 6px solid transparent;
}

#collapseVisa .accordion-body {
    border-left-color: #dc3545;
}

#collapseMomo .accordion-body {
    border-left-color: #198754;
}

#collapseBank .accordion-body {
    border-left-color: #0d6efd;
}

#collapseCOD .accordion-body {
    border-left-color: #6c757d;
}

.payment-accordion .accordion-button::after {
    transition: transform 0.25s ease;
}

.payment-accordion .accordion-button:not(.collapsed)::after {
    transform: rotate(-180deg);
}

/* Đánh giá sao */
.rating-star {
    color: gold !important;
    font-size: 3.25rem;
    margin-right: 3px;
}

/* Mô tả chi tiết */
.product-detail__full-description {
    color: #555;
    font-size: 1.1rem;
    line-height: 1.8;
    margin-top: 3rem;
}

/* Sản phẩm tương tự */
.related-products .card {
    border-radius: var(--border-radius);
    overflow: hidden;
    transition: all 0.3s ease;
    box-shadow: 0 1px 6px var(--shadow-light);
}
b, strong {
    font-weight: bolder;
    font-size: 2rem;
}
span.text-muted.ms-1 {
    font-size: 2rem;
}
.related-products .card:hover {
    transform: translateY(-6px);
    box-shadow: 0 10px 25px var(--shadow-hover);
}
span.text-secondary.fst-italic.ms-3 {
    font-size: 2rem;
}
.related-products .card-img-top {
    background-color: #fff;
    padding: 12px;
    transition: transform 0.3s ease;
    object-fit: contain;
    height: 170px;
}

.related-products .card:hover .card-img-top {
    transform: scale(1.05);
}

/* Form đánh giá */
.review-form .btn-outline-warning {
    border-radius: 10px;
    font-weight: 700;
    transition: all 0.3s ease;
}

.review-form .btn-outline-warning:hover {
    background-color: gold;
    color: #000;
}

.review-form textarea.form-control {
    border-radius: 10px;
    border: 1px solid #ccc;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
}

.review-form textarea.form-control:focus {
    border-color: var(--primary-color);
    box-shadow: 0 0 10px rgba(255, 158, 79, 0.4);
}

/* Đánh giá user */
.user-review {
    background: var(--bg-light);
    border: 1px solid var(--primary-color);
    border-radius: var(--border-radius);
    padding: 1rem 1.5rem;
    margin-bottom: 1.5rem;
    box-shadow: 0 0 12px var(--shadow-light);
}

