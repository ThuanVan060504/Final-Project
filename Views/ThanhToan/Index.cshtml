        <div>
            <button class="btn btn-primary btn-sm" type="button" onclick="saveNewAddress()">Lưu địa chỉ</button>
            <button class="btn btn-cancel-add btn-sm" type="button" onclick="toggleAddForm()">Hủy</button>
