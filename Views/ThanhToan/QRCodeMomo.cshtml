@{
    ViewData["Title"] = "Quét mã QR MoMo để thanh toán";
    string payUrl = ViewBag.PayUrl;
}

<h2>Quét mã QR MoMo</h2>
@if (!string.IsNullOrEmpty(payUrl)){
    <p>Vui lòng quét mã QR bên dưới để thanh toán đơn hàng của bạn.</p>
    <img src="https://api.qrserver.com/v1/create-qr-code/?size=300x300&data=@payUrl" alt="QR MoMo" />
    <p><a href="@payUrl" class="btn btn-primary mt-3">Hoặc nhấn vào đây nếu bạn không thấy mã QR</a></p>
}
else
{
    <p class="text-danger">Không thể tạo mã QR. Vui lòng thử lại sau.</p>
}
