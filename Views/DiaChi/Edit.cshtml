@model Final_Project.Models.User.DiaChiNguoiDung
@{
    ViewData["Title"] = "Chỉnh sửa địa chỉ";
}

<h4 class="mb-3">✏️ Chỉnh sửa địa chỉ</h4>

<form asp-action="Edit" method="post" class="row g-3">
    <input type="hidden" asp-for="MaDiaChi" />
    <div class="col-md-12">
        <label class="form-label">Địa chỉ chi tiết</label>
        <input asp-for="DiaChiChiTiet" class="form-control" />
    </div>
    <div class="col-md-4">
        <label class="form-label">Phường/Xã</label>
        <input asp-for="PhuongXa" class="form-control" />
    </div>
    <div class="col-md-4">
        <label class="form-label">Quận/Huyện</label>
        <input asp-for="QuanHuyen" class="form-control" />
    </div>
    <div class="col-md-4">
        <label class="form-label">Tỉnh/TP</label>
        <input asp-for="TinhTP" class="form-control" />
    </div>
    <div class="col-md-12 form-check">
        <input asp-for="MacDinh" class="form-check-input" />
        <label class="form-check-label" for="MacDinh">Đặt làm địa chỉ mặc định</label>
    </div>
    <div class="col-md-12">
        <button type="submit" class="btn btn-success">💾 Lưu thay đổi</button>
        <a asp-action="Index" class="btn btn-secondary">⬅️ Quay lại</a>
    </div>
</form>
