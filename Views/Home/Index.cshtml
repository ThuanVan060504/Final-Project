@model List<Final_Project.Models.SanPham>


<div class="container mt-5">
    <h2 class="text-center fw-bold mb-4">🌟 Sản phẩm nổi bật</h2>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
        @foreach (var sp in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0">
                    <img src="@sp.ImageURL" class="card-img-top" style="height: 200px; object-fit: cover;" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="fw-bold">@sp.TenSP</h5>
                        <p class="text-danger fw-semibold">@sp.DonGia.ToString("N0") đ</p>
                        <p class="text-muted small">@sp.MoTa</p>
                        <div class="mt-auto">
                            <a class="btn btn-outline-primary btn-sm w-100" href="#">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
