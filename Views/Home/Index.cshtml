<script>
    $(document).ready(function() {

        // --- Code cho Voucher ---
        $('.btn-save-voucher').on('click', function(e) {
            e.preventDefault();
            var voucherId = $(this).data('id');
            var button = $(this);

            $.ajax({
                url: '/api/voucher/save',
                type: 'POST',
                data: { voucherId: voucherId },
                success: function(response) {
                    alert(response.message);
                    button.text('Đã lưu').prop('disabled', true).removeClass('btn-danger').addClass('btn-success');
                },
                error: function(xhr) {
                    var errorMsg = "Đã xảy ra lỗi. Vui lòng thử lại.";
                    if (xhr.responseJSON && xhr.responseJSON.message) {
                        errorMsg = xhr.responseJSON.message;
                    }
                    alert(errorMsg);

                    if(xhr.status == 409) { // 409 = Conflict (Đã lưu rồi)
                         button.text('Đã lưu').prop('disabled', true).removeClass('btn-danger').addClass('btn-secondary');
                    }
                }
            });
        });

// --- ✅ BẮT ĐẦU: SCRIPT MỚI CHO VIDEO REVIEW (DÙNG SWIPER) ---
        
        var $videoModal = $('#videoReviewModal');
        var videoCards = $('.video-review-card');
        var videoSwiperInstance = null; // Biến để giữ thể hiện (instance) của Swiper
        var clickedVideoIndex = 0; // Biến để lưu trữ index của video được click

        // Hàm để dừng tất cả video đang phát
        function pauseAllVideos() {
            $('#videoSwiper .swiper-slide video').each(function() {
                this.pause();
            });
        }
        
        // --- ⭐ CẬP NHẬT: Hàm ẩn tất cả card (reset cả .is-expanded) ---
        function hideAllProductDetails() {
            $videoModal.find('.video-product-details')
                       .removeClass('show')
                       .removeClass('is-expanded'); // <-- Đảm bảo reset cả trạng thái mở rộng
        }

        // Khi click vào một card video
        videoCards.on('click', function () {
            clickedVideoIndex = videoCards.index(this); 
            $videoModal.modal('show');
        });

        // Sự kiện khi modal ĐÃ ĐƯỢC HIỂN THỊ
        $videoModal.on('shown.bs.modal', function () {
            // Khởi tạo Swiper
            videoSwiperInstance = new Swiper('#videoSwiper', {
                direction: 'vertical',
                loop: false,
                mousewheel: true,
                initialSlide: clickedVideoIndex,
                on: {
                    // Khi khởi tạo xong
                    init: function () {
                        var activeSlideVideo = $(this.slides[this.activeIndex]).find('video');
                        if (activeSlideVideo.length > 0) {
                            activeSlideVideo[0].play().catch(error => console.log("Lỗi tự động phát:", error));
                        }
                    },
                    // Khi chuyển slide xong
                    slideChangeTransitionEnd: function () {
                        pauseAllVideos();
                        hideAllProductDetails(); // <-- Quan trọng: Reset card khi chuyển slide

                        var activeSlideVideo = $(this.slides[this.activeIndex]).find('video');
                        if (activeSlideVideo.length > 0) {
                            activeSlideVideo[0].currentTime = 0; 
                            activeSlideVideo[0].play().catch(error => console.log("Lỗi tự động phát:", error));
                        }
                    },

                    // Xử lý TAP (chạm/click) trên video
                    tap: function(swiper, event) {
                        // 1. Nếu click vào bất kỳ phần tử nào trong card SP, thì bỏ qua
                        if ($(event.target).closest('.video-product-details').length) {
                             return;
                        }
                        // 2. Nếu click vào nút "Xem SP", cũng bỏ qua
                        if ($(event.target).closest('.btn-show-product').length) {
                            return;
                        }

                        // 3. Nếu card SP đang mở, thì đóng nó lại (ưu tiên)
                        if ($videoModal.find('.video-product-details.show').length > 0) {
                            hideAllProductDetails();
                            // và tiếp tục phát video
                            var currentVideo = $(swiper.slides[swiper.activeIndex]).find('video');
                            if (currentVideo.length > 0) currentVideo[0].play();
                            return;
                        }

                        // 4. Ngược lại, xử lý play/pause video
                        var activeSlideVideo = $(swiper.slides[swiper.activeIndex]).find('video');
                        if (activeSlideVideo.length > 0) {
                            if (activeSlideVideo[0].paused) {
                                activeSlideVideo[0].play().catch(error => console.log("Lỗi play:", error));
                            } else {
                                activeSlideVideo[0].pause();
                            }
                        }
                    }
                },
            });
        });

        // Sự kiện khi modal BỊ ĐÓNG
        $videoModal.on('hidden.bs.modal', function () {
            pauseAllVideos();
            hideAllProductDetails(); // Reset khi đóng
            
            if (videoSwiperInstance) {
                videoSwiperInstance.destroy(true, true);
                videoSwiperInstance = null;
            }
        });

        // --- ⭐ CẬP NHẬT: EVENT DELEGATION ĐỂ XỬ LÝ CLICK TRONG MODAL ---
        
        // Khi click nút "Xem sản phẩm" (Trigger ban đầu)
        $videoModal.on('click', '.btn-show-product', function() {
            var $detailsCard = $(this).closest('.swiper-slide').find('.video-product-details');
            
            // Ẩn các card khác và hiển thị card này (ở trạng thái CƠ BẢN)
            hideAllProductDetails(); 
            $detailsCard.addClass('show'); // Chỉ thêm .show

            $(this).closest('.swiper-slide').find('video')[0].pause();
        });

        // Khi click nút "Đóng" (dấu X)
        $videoModal.on('click', '.btn-close-details', function() {
            var $detailsCard = $(this).closest('.video-product-details');
            
            // Ẩn card đi (reset cả 2 class)
            $detailsCard.removeClass('show').removeClass('is-expanded');

            // Tiếp tục phát video
            if (videoSwiperInstance) {
                var activeSlideVideo = $(videoSwiperInstance.slides[videoSwiperInstance.activeIndex]).find('video');
                if (activeSlideVideo.length > 0) {
                    activeSlideVideo[0].play().catch(error => console.log("Lỗi play:", error));
                }
            }
        });
        
        // --- ⭐ MỚI: Khi click nút "Xem chi tiết đầy đủ" ---
        $videoModal.on('click', '.btn-full-details', function(e) {
            e.preventDefault();
            var $detailsCard = $(this).closest('.video-product-details');
            
            // Toggle trạng thái mở rộng
            $detailsCard.toggleClass('is-expanded');
            
            // Đổi chữ trên nút (Tùy chọn)
            var $icon = $(this).find('.fa');
            if ($detailsCard.hasClass('is-expanded')) {
                $(this).contents().filter(function(){ return this.nodeType == 3; }).first().replaceWith("Thu gọn ");
                // Icon đã tự xoay bằng CSS
            } else {
                $(this).contents().filter(function(){ return this.nodeType == 3; }).first().replaceWith("Xem chi tiết đầy đủ ");
            }
        });
        
        // Khi click nút "Thêm vào giỏ hàng"
        $videoModal.on('click', '.btn-add-to-cart', function(e) {
            e.preventDefault();
            var productId = $(this).data('product-id');
            var button = $(this);

            // Vô hiệu hóa nút để tránh click nhiều lần
