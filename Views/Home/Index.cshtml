@using Final_Project.Models.Shop
@model IEnumerable<SanPham>

@{
   
    ViewData["Title"] = "Sản phẩm nổi bật";
}

<style>
    .card:hover {
        transform: translateY(-4px);
        transition: all 0.3s ease-in-out;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="container mt-4">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3">
            <ul class="list-group">
                <li class="list-group-item">Traditional Wear</li>
                <li class="list-group-item">Western Wear</li>
                <li class="list-group-item">Swim & Beachwear</li>
                <li class="list-group-item">Winter & Seasonal Wear</li>
                <li class="list-group-item">Beauty & Grooming</li>
                <li class="list-group-item">Jewellery</li>
                <li class="list-group-item">Personal care Appliances</li>
                <li class="list-group-item">International Brands</li>
                <li class="list-group-item">Foot Wear</li>
                <li class="list-group-item">Watches</li>
                <li class="list-group-item">Accessories</li>
            </ul>
        </div>

        <!-- Banner & Ads (Carousel) -->
        <div class="col-md-6">
            <div id="mainCarousel" class="carousel slide mb-3" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="https://rubicmarketing.com/wp-content/uploads/2021/09/thiet-ke-banner-quang-cao-noi-that-3.jpg" class="d-block w-100 rounded" alt="Slide 1">
                    </div>
                    <div class="carousel-item">
                        <img src="https://noithatzear.vn/wp-content/uploads/2023/09/Mau-banner-noi-that-danh-cho-cong-ty.png" class="d-block w-100 rounded" alt="Slide 2">
                    </div>
                    <div class="carousel-item">
                        <img src="https://noithatzear.vn/wp-content/uploads/2023/09/Mau-banner-noi-that-dep.png" class="d-block w-100 rounded" alt="Slide 3">
                    </div>
                    <div class="carousel-item">
                        <img src="https://noithatzear.vn/wp-content/uploads/2023/09/Banner-noi-that.png" class="d-block w-100 rounded" alt="Slide 4">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>

            <div class="row">
                <div class="col-4">
                    <div class="bg-white border text-center p-2 mb-2">
                        <small>UP TO 30% OFF</small><br />
                        <img src="https://via.placeholder.com/100x80?text=Bag" alt="Avaken" />
                        <p>For all hand purses</p>
                    </div>
                </div>
                <div class="col-4">
                    <div class="bg-white border text-center p-2 mb-2">
                        <small>EXPLORE THE BIGGEST DISCOUNT</small><br />
                        <img src="https://via.placeholder.com/100x80?text=Watch" alt="Watch" />
                        <p>Time Zone</p>
                    </div>
                </div>
                <div class="col-4">
                    <div class="bg-white border text-center p-2 mb-2">
                        <small>DON’T MISS THE YEAR END SELL</small><br />
                        <img src="https://via.placeholder.com/100x80?text=Lamp" alt="Lamp" />
                        <p>7 days left</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Suggestions -->
        <div class="col-md-3">
            <div class="mb-3 text-center">
                <h6>Recently Viewed</h6>
                <img src="https://via.placeholder.com/100x100?text=Bag" class="img-fluid" />
                <p><a href="#">See your browsing history</a></p>
            </div>
            <div class="text-center">
                <h6>Suggestions for You</h6>
                <img src="https://via.placeholder.com/100x100?text=Backpack" class="img-fluid" />
                <p><a href="#">Watch more</a></p>
            </div>
        </div>
    </div>

    <!-- Deals of the Day -->
    <div class="mt-5">
        <h5>Deals of the Day <span class="text-danger">20 : 45 : 12 Left</span></h5>
        <div class="row text-center">
            <div class="col-6 col-md-2 deal-item">
                <img src="https://via.placeholder.com/100x100?text=GUCCI" class="img-fluid" />
                <p>Red leather GUCCI bag<br /><del>7300 Bdt</del> <strong>4500 Bdt</strong></p>
            </div>
            <div class="col-6 col-md-2 deal-item">
                <img src="https://via.placeholder.com/100x100?text=Cream" class="img-fluid" />
                <p>LEXRX face cream<br /><del>740 Bdt</del> <strong>300 Bdt</strong></p>
            </div>
            <div class="col-6 col-md-2 deal-item">
                <img src="https://via.placeholder.com/100x100?text=Camera" class="img-fluid" />
                <p>Fuji Film DSLR<br /><del>43990 Bdt</del> <strong>35,000 Bdt</strong></p>
            </div>
            <div class="col-6 col-md-2 deal-item">
                <img src="https://via.placeholder.com/100x100?text=Shoes" class="img-fluid" />
                <p>Sky blue kids shoe<br /><del>1300 Bdt</del> <strong>910 Bdt</strong></p>
            </div>
            <div class="col-6 col-md-2 deal-item">
                <img src="https://via.placeholder.com/100x100?text=Wallet" class="img-fluid" />
                <p>Brown leather wallet<br /><del>980 Bdt</del> <strong>600 Bdt</strong></p>
            </div>
        </div>
        <a href="#" class="btn btn-link mt-2">View All Deals</a>
    </div>
</div>
<h2 class="mb-4">Sản phẩm nổi bật</h2>
<div class="row">
    @foreach (var sp in Model)
    {
        <div class="col-md-4 mb-4">
            <a asp-controller="SanPham" asp-action="Details" asp-route-id="@sp.MaSP" class="text-decoration-none text-dark">
                <div class="card h-100 shadow-sm">
                    <img src="@sp.ImageURL" class="card-img-top" alt="@sp.TenSP" style="height: 250px; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@sp.TenSP</h5>
                        <p class="text-muted">@sp.DanhMuc?.TenDanhMuc</p>
                        <p class="text-danger fw-bold">@sp.DonGia.ToString("N0") đ</p>
                        <p class="card-text">@sp.MoTa</p>
                    </div>
                </div>
            </a>
        </div>
    }
</div>
