@model List<Final_Project.Models.Shop.Decor>

@{
    ViewData["Title"] = "Trang Decor 3D";
}

<h2 class="text-center mb-4">🛋️ Danh sách Decor 3D</h2>

<div class="container">
    <div class="row">
        <!-- 🔍 Sidebar -->
        <div class="col-md-3 mb-4">
            <form method="get" asp-action="Index" class="card shadow-sm p-3">
                <h5 class="fw-semibold mb-3">🎯 Bộ lọc</h5>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Danh mục</label>
                    <select class="form-select" name="category">
                        <option value="">Tất cả</option>
                        <option value="Phòng khách">Phòng khách</option>
                        <option value="Phòng ngủ">Phòng ngủ</option>
                        <option value="Phòng ăn">Phòng ăn</option>
                        <option value="Phòng làm việc">Phòng làm việc</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Tìm kiếm</label>
                    <input class="form-control" type="text" name="search" placeholder="Tên decor..."
                           value="@Context.Request.Query["search"]" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Sắp xếp theo</label>
                    <select class="form-select" name="sort">
                        <option value="">Mặc định</option>
                        <option value="asc">Tên A-Z</option>
                        <option value="desc">Tên Z-A</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary w-100">Lọc Decor</button>
            </form>
        </div>

        <!-- 📦 Danh sách Decor -->
        <div class="col-md-9">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-6 mb-5">
                        <div class="card shadow">
                            <div class="card-header bg-dark text-white">
                                <h5>@item.TenDecor</h5>
                            </div>
                            <div class="card-body">
                                <p>@item.MoTa</p>

                                @if (!string.IsNullOrEmpty(item.Link3D))
                                {
                                    string embedLink = item.Link3D;
                                    if (!embedLink.Contains("/embed/"))
                                    {
                                        var modelId = embedLink.Split('/').Last();
                                        embedLink = $"https://sketchfab.com/models/{modelId}/embed";
                                    }
                                    if (!embedLink.Contains("?autostart=1"))
                                    {
                                        embedLink += (embedLink.Contains("?") ? "&" : "?") + "autostart=1";
                                    }

                                    <div class="ratio ratio-16x9">
                                        <iframe title="3D Decor Viewer"
                                                frameborder="0"
                                                allowfullscreen
                                                allow="autoplay; fullscreen; xr-spatial-tracking"
                                                xr-spatial-tracking execution-while-out-of-viewport execution-while-not-rendered web-share
                                                src="@embedLink">
                                        </iframe>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<style>
    /* 🌟 Màu chủ đạo */
    :root {
        --primary-color: #ff9e4f;
    }

    /* Tiêu đề chính */
    h2 {
        font-weight: 700;
        color: var(--primary-color);
        letter-spacing: 1px;
    }

    /* Sidebar bộ lọc */
    .card.shadow-sm {
        border: none;
        border-radius: 12px;
        background: #fff7f2;
    }

    .card.shadow-sm h5 {
        color: var(--primary-color);
    }

    .form-label {
        color: #444;
        font-weight: 600;
    }

    /* Nút lọc */
    .btn-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #e78538;
        border-color: #e78538;
    }

    /* Card Decor */
    .card.shadow {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        transition: transform 0.25s ease, box-shadow 0.25s ease;
        min-height: 435px; /* 📏 Chiều cao tối thiểu */
        display: flex;
        flex-direction: column;
    }

    .card.shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 20px rgba(0, 0, 0, 0.12);
    }

    .card-header {
        background-color: var(--primary-color) !important;
        font-weight: bold;
        border-bottom: none;
    }

    .card-header h5 {
        margin: 0;
        font-size: 1.2rem;
    }

    .card-body {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .card-body p {
        color: #555;
        margin-bottom: 15px;
    }

    /* Iframe 3D */
    .ratio-16x9 {
        height: 320px; /* 📏 tăng chiều cao iframe */
    }

    iframe {
        border-radius: 8px;
        border: 2px solid var(--primary-color);
        width: 100%;
        height: 100%;
    }
</style>
