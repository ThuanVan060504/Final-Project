@{
    ViewData["Title"] = "Đăng ký nhập";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Kế thừa Layout
}
<link rel="stylesheet" href="/css/dangnhap.css" />

<h2>Đăng nhập</h2>

@if (ViewBag.Error != null)
{
    <div style="color: red;">@ViewBag.Error</div>
}
@if (TempData["Success"] != null)
{
    <div style="color: green;">@TempData["Success"]</div>
}

<form asp-controller="Dangnhap" asp-action="Index" method="post">
    <label>Tên đăng nhập:</label><br />
    <input type="text" name="username" /><br /><br />

    <label>Mật khẩu:</label><br />
    <input type="password" name="password" /><br /><br />

    <button type="submit">Đăng nhập</button>
</form>

<p>Chưa có tài khoản? <a asp-action="DangKy">Đăng ký</a></p>
