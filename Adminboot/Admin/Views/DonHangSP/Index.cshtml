@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Đơn Hàng";
}

<link rel="shortcut icon" type="image/x-icon" href="~/Admin/img/favicon.jpg">
<link rel="stylesheet" href="~/Admin/css/bootstrap.min.css">
<link rel="stylesheet" href="~/Admin/css/animate.css">
<link rel="stylesheet" href="~/Admin/plugins/select2/css/select2.min.css">
<link rel="stylesheet" href="~/Admin/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" href="~/Admin/plugins/fontawesome/css/fontawesome.min.css">
<link rel="stylesheet" href="~/Admin/plugins/fontawesome/css/all.min.css">
<link rel="stylesheet" href="~/Admin/css/style.css">

<div class="page-wrapper">
    <div class="content">
        <div class="page-header">
            <div class="page-title">
                <h4>Danh Sách Đơn Hàng</h4>
                <h6>Quản lý đơn hàng của khách</h6>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table datanew">
                        <thead>
                            <tr>
                                <th>Mã Đơn</th>
                                <th>Sản Phẩm</th>
                                <th>Ngày Đặt</th>
                                <th>Phương Thức</th>
                                <th>Trạng Thái</th>
                                <th>Đơn Giá</th>
                                <th>Số Lượng</th>
                                <th>Tổng</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.MaDonHang</td>
                                    <td class="productimgname">
                                        <a href="javascript:void(0);" class="product-img">
                                            <img src="@item.ImageURL" alt="product" width="40" height="40" />
                                        </a>
                                        <a href="javascript:void(0);">@item.TenSP</a>
                                    </td>
                                    <td>@item.NgayDat.ToString("dd/MM/yyyy")</td>
                                    <td>@item.PhuongThucThanhToan</td>

                                    <td>
                                        <select class="form-select form-control status-dropdown" data-id="@item.MaDonHang">
                                            <option value="DangXuLy" @(item.TrangThaiDonHang == "DangXuLy" ? "selected" : "")>Đang xử lý</option>
                                            <option value="DangGiao" @(item.TrangThaiDonHang == "DangGiao" ? "selected" : "")>Đang giao</option>
                                            <option value="DaGiao" @(item.TrangThaiDonHang == "DaGiao" ? "selected" : "")>Đã giao</option>
                                            <option value="HuyDon" @(item.TrangThaiDonHang == "HuyDon" ? "selected" : "")>Hủy đơn</option>
                                        </select>
                                    </td>


                                    <td>@item.DonGiaBan.ToString("N0") ₫</td>
                                    <td>@item.SoLuongDat</td>
                                    <td>@item.TongTien.ToString("N0") ₫</td>

                                    <td>
                                        <a href="javascript:void(0);" class="btn btn-sm btn-info btn-view-detail" data-id="@item.MaDonHang" title="Xem Chi Tiết">
                                            <i class=""></i> Chi tiết
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="orderDetailModal" tabindex="-1" role="dialog" aria-labelledby="orderDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div id="modal-content-placeholder">
                <div class="modal-body text-center">
                    Đang tải...
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Admin/js/jquery-3.6.0.min.js"></script>
<script src="~/Admin/js/feather.min.js"></script>
<script src="~/Admin/js/jquery.slimscroll.min.js"></script>
<script src="~/Admin/js/jquery.dataTables.min.js"></script>
<script src="~/Admin/js/dataTables.bootstrap4.min.js"></script>
<script src="~/Admin/js/bootstrap.bundle.min.js"></script>
<script src="~/Admin/plugins/select2/js/select2.min.js"></script>
<script src="~/Admin/plugins/sweetalert/sweetalert2.all.min.js"></script>
<script src="~/Admin/plugins/sweetalert/sweetalerts.min.js"></script>
<script src="~/Admin/js/script.js"></script>

<script>
    // Script cập nhật trạng thái
    $('.status-dropdown').change(function () {
        var dropdown = $(this);
        var maDonHang = dropdown.data('id');
        var trangThaiMoi = dropdown.val();
        var trangThaiCu = dropdown.find('option:selected').data('current-status'); // Giả sử bạn lấy trạng thái cũ

        $.ajax({
            url: '@Url.Action("UpdateTrangThai", "DonHang", new { Area = "Admin" })',
            method: 'POST',
            data: {
                maDonHang: maDonHang,
                trangThai: trangThaiMoi
            },
            success: function () {
                // Cập nhật thành công
                Swal.fire({
                    icon: 'success',
                    title: 'Thành công!',
                    text: 'Cập nhật trạng thái đơn hàng #' + maDonHang + ' thành ' + trangThaiMoi + ' thành công!',
                    showConfirmButton: false,
                    timer: 1500
                });
            },
            error: function (xhr) {
                var errorMessage = "Lỗi khi cập nhật trạng thái.";
                // Kiểm tra nếu lỗi là BadRequest (400) và có nội dung trả về
                if (xhr.status === 400 && xhr.responseText) {
                    errorMessage = xhr.responseText; // Lấy thông báo lỗi từ Controller
                } else if (xhr.status === 404) {
                     errorMessage = "Không tìm thấy đơn hàng.";
                }

                // Quay lại trạng thái cũ (nếu có, nếu không thì thông báo lỗi chung)
                // Lấy trạng thái hiện tại từ DB/Controller tốt hơn, nhưng tạm thời reset
                var trangThaiHienTai = dropdown.find('option[value="' + trangThaiCu + '"]').text();
                dropdown.val(trangThaiCu); // Reset dropdown về trạng thái trước đó

                Swal.fire({
                    icon: 'error',
                    title: 'Thất bại!',
                    text: errorMessage
                });
            }
        });
    });

    // Script hiển thị chi tiết đơn hàng (GIỮ NGUYÊN)
    $('.btn-view-detail').click(function () {
        var maDonHang = $(this).data('id');
        var modalContent = $('#modal-content-placeholder');

        // Hiển thị trạng thái tải
        modalContent.html('<div class="modal-body text-center"><i class="fas fa-spinner fa-spin"></i> Đang tải thông tin...</div>');
        $('#orderDetailModal').modal('show');

        // Gửi AJAX để lấy Partial View (nội dung chi tiết)
        $.ajax({
            url: '@Url.Action("ChiTietDonHang", "DonHang", new { Area = "Admin" })',
            type: 'GET',
            data: { maDonHang: maDonHang },
            success: function (data) {
                // Chèn nội dung Partial View vào Modal
                modalContent.html(data);
            },
            error: function (xhr, status, error) {
                modalContent.html('<div class="modal-body text-danger">Lỗi khi tải chi tiết đơn hàng. Vui lòng thử lại.</div>');
                console.error("AJAX Error:", status, error);
            }
        });
    });
</script>