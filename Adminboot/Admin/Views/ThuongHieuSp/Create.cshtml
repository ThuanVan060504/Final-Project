@{
      Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Thêm Thương Hiệu";
}

<link rel="shortcut icon" type="image/x-icon" href="~/Admin/img/favicon.jpg">

<link rel="stylesheet" href="~/Admin/css/bootstrap.min.css">

<link rel="stylesheet" href="~/Admin/css/animate.css">

<link rel="stylesheet" href="~/Admin/plugins/select2/css/select2.min.css">

<link rel="stylesheet" href="~/Admin/css/dataTables.bootstrap4.min.css">

<link rel="stylesheet" href="~/Admin/plugins/fontawesome/css/fontawesome.min.css">
<link rel="stylesheet" href="~/Admin/plugins/fontawesome/css/all.min.css">

<link rel="stylesheet" href="~/Admin/css/style.css">
<div class="page-wrapper">
    <div class="content">
        <div class="page-header">
            <div class="page-title">
                <h4>Brand ADD</h4>
                <h6>Create new Brand</h6>
            </div>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }

       <form asp-action="Index" method="post" enctype="multipart/form-data">
    <div class="card">
        <div class="card-body">
            <div class="row">

                <!-- Mã thương hiệu -->
                <div class="col-lg-3 col-sm-6 col-12">
                    <div class="form-group">
                        <label>Mã thương hiệu</label>
                        <input type="number" name="MaThuongHieu" class="form-control" required placeholder="VD: 1001" />
                        @if (ViewData.ModelState["MaThuongHieu"]?.Errors.Count > 0)
                        {
                            <span class="text-danger">@ViewData.ModelState["MaThuongHieu"].Errors[0].ErrorMessage</span>
                        }
                    </div>
                </div>

                <!-- Tên thương hiệu -->
                <div class="col-lg-3 col-sm-6 col-12">
                    <div class="form-group">
                        <label>Tên thương hiệu</label>
                        <input type="text" name="TenThuongHieu" class="form-control" required placeholder="VD: VinFast" />
                        @if (ViewData.ModelState["TenThuongHieu"]?.Errors.Count > 0)
                        {
                            <span class="text-danger">@ViewData.ModelState["TenThuongHieu"].Errors[0].ErrorMessage</span>
                        }
                    </div>
                </div>

                <!-- Upload hình ảnh -->
                <div class="col-lg-6 col-sm-12 col-12">
                    <div class="form-group">
                        <label>Hình ảnh logo (tuỳ chọn)</label>
                        <div class="image-upload">
                            <input type="file" name="Anh" class="form-control" accept="image/*" />
                            <div class="image-uploads mt-2 d-flex align-items-center gap-2">
                                <img src="~/Admin/img/icons/upload.svg" alt="upload icon" style="width: 40px;" />
                                <span>Kéo thả hoặc chọn ảnh để tải lên</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Nhập link logo -->
                <div class="col-lg-6 col-sm-12 col-12">
                    <div class="form-group">
                        <label>Hoặc nhập link ảnh logo</label>
                        <input type="text" name="LinkLogo" class="form-control" placeholder="https://example.com/logo.png" />
                        @if (ViewData.ModelState["LinkLogo"]?.Errors.Count > 0)
                        {
                            <span class="text-danger">@ViewData.ModelState["LinkLogo"].Errors[0].ErrorMessage</span>
                        }
                    </div>
                </div>

                <!-- Nút submit -->
                <div class="col-lg-12 mt-3">
                    <button type="submit" class="btn btn-submit me-2">Submit</button>
                    <a href="/Thuonghieu/Danhsach" class="btn btn-cancel">Cancel</a>
                </div>

            </div>
        </div>
    </div>
</form>


<script src="~/Admin/js/jquery-3.6.0.min.js"></script>

<script src="~/Admin/js/feather.min.js"></script>

<script src="~/Admin/js/jquery.slimscroll.min.js"></script>

<script src="~/Admin/js/jquery.dataTables.min.js"></script>
<script src="~/Admin/js/dataTables.bootstrap4.min.js"></script>

<script src="~/Admin/js/bootstrap.bundle.min.js"></script>

<script src="~/Admin/plugins/select2/js/select2.min.js"></script>

<script src="~/Admin/plugins/sweetalert/sweetalert2.all.min.js"></script>
<script src="~/Admin/plugins/sweetalert/sweetalerts.min.js"></script>

<script src="~/Admin/js/script.js"></script>