@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Thêm sản phẩm";
}
<link rel="shortcut icon" type="image/x-icon" href="~/Admin/img/favicon.jpg">

<link rel="stylesheet" href="~/Admin/css/bootstrap.min.css">

<link rel="stylesheet" href="~/Admin/css/animate.css">

<link rel="stylesheet" href="~/Admin/plugins/select2/css/select2.min.css">

<link rel="stylesheet" href="~/Admin/css/dataTables.bootstrap4.min.css">

<link rel="stylesheet" href="~/Admin/plugins/fontawesome/css/fontawesome.min.css">
<link rel="stylesheet" href="~/Admin/plugins/fontawesome/css/all.min.css">

<link rel="stylesheet" href="~/Admin/css/style.css">

<h2>Thêm sản phẩm</h2>
<div class="page-wrapper">
    <div class="content">
        <div class="page-header">
            <div class="page-title">
                <h4>Thêm sản phẩm</h4>
                <h6>Tạo mới một sản phẩm</h6>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <form asp-area="Admin" asp-controller="SanPham" asp-action="Create" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div class="row">

                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Tên sản phẩm</label>
                                <input type="text" name="TenSP" class="form-control" required />
                            </div>
                        </div>

                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Danh mục</label>
                                @Html.DropDownList("MaDanhMuc", (SelectList)ViewBag.DanhMucList, "Chọn danh mục", new { @class = "form-control select" })
                            </div>
                        </div>

                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Thương hiệu</label>
                                @Html.DropDownList("MaThuongHieu", (SelectList)ViewBag.ThuongHieuList, "Chọn thương hiệu", new { @class = "form-control select" })
                            </div>
                        </div>

                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Giá bán</label>
                                <input type="number" step="0.01" name="DonGia" class="form-control" required />
                            </div>
                        </div>

                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Giá gốc</label>
                                <input type="number" step="0.01" name="GiaGoc" class="form-control" />
                            </div>
                        </div>

                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Số lượng</label>
                                <input type="number" name="SoLuong" class="form-control" />
                            </div>
                        </div>

                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Chiều rộng (cm)</label>
                                <input type="number" step="0.01" name="ChieuRong" class="form-control" />
                            </div>
                        </div>

                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Chiều cao (cm)</label>
                                <input type="number" step="0.01" name="ChieuCao" class="form-control" />
                            </div>
                        </div>

                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Chiều sâu (cm)</label>
                                <input type="number" step="0.01" name="ChieuSau" class="form-control" />
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Mô tả sản phẩm</label>
                                <textarea name="MoTa" class="form-control"></textarea>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Hình ảnh sản phẩm (Tải lên)</label>
                                <div class="image-upload">
                                    <input type="file" name="Anh" class="form-control" />
                                    <div class="image-uploads mt-2">
                                        <img src="~/Admin/img/icons/upload.svg" alt="img" style="height:40px;">
                                        <h6>Kéo và thả file để tải lên</h6>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Hoặc đường dẫn ảnh</label>
                                <input type="text" name="ImageURL" class="form-control" placeholder="Nhập URL hình ảnh" />
                            </div>
                        </div>

                        <div class="col-lg-12 mt-3">
                            <button type="submit" class="btn btn-submit me-2">Lưu</button>
                            <a asp-area="Admin" asp-controller="SanPham" asp-action="Index" class="btn btn-cancel">Hủy</a>
                        </div>

                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

<script src="~/Admin/js/jquery-3.6.0.min.js"></script>

<script src="~/Admin/js/feather.min.js"></script>

<script src="~/Admin/js/jquery.slimscroll.min.js"></script>

<script src="~/Admin/js/jquery.dataTables.min.js"></script>
<script src="~/Admin/js/dataTables.bootstrap4.min.js"></script>

<script src="~/Admin/js/bootstrap.bundle.min.js"></script>

<script src="~/Admin/plugins/select2/js/select2.min.js"></script>

<script src="~/Admin/plugins/sweetalert/sweetalert2.all.min.js"></script>
<script src="~/Admin/plugins/sweetalert/sweetalerts.min.js"></script>

<script src="~/Admin/js/script.js"></script>