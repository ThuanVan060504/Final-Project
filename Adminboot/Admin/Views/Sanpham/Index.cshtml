<!-- Script -->
<script src="~/Admin/js/jquery-3.6.0.min.js"></script>

<script src="~/Admin/js/feather.min.js"></script>

<script src="~/Admin/js/jquery.slimscroll.min.js"></script>

<script src="~/Admin/js/jquery.dataTables.min.js"></script>
<script src="~/Admin/js/dataTables.bootstrap4.min.js"></script>

<script src="~/Admin/js/bootstrap.bundle.min.js"></script>

<script src="~/Admin/plugins/select2/js/select2.min.js"></script>

<script src="~/Admin/plugins/sweetalert/sweetalert2.all.min.js"></script>
<script src="~/Admin/plugins/sweetalert/sweetalerts.min.js"></script>

<script src="~/Admin/js/script.js"></script>
@section Scripts {
<script>
    $(document).ready(function () {
        // Nếu DataTable đã được khởi tạo, hủy nó trước khi khởi tạo lại
        if ($.fn.DataTable.isDataTable('.datanew')) {
            $('.datanew').DataTable().destroy();
        }
        
        // Khởi tạo DataTable mới
        $('.datanew').DataTable({
            pageLength: 10,
            lengthChange: false,
            language: {
                paginate: { previous: "Trước", next: "Sau" },
                search: "Tìm kiếm:",
                info: "Hiển thị _START_ đến _END_ của _TOTAL_ sản phẩm",
                infoEmpty: "Không có sản phẩm nào",
                zeroRecords: "Không tìm thấy sản phẩm"
            },
            initComplete: function () {
                $('.dataTables_filter').addClass('w-100');
            }
        });

        // Xóa sản phẩm với SweetAlert
        $(document).on('click', '.btn-delete', function (e) {
            e.preventDefault();
            var form = $(this).closest('form');
            Swal.fire({
                title: 'Xác nhận xóa?',
                text: "Dữ liệu sẽ bị xóa vĩnh viễn!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Xóa',
                cancelButtonText: 'Hủy'
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        });

        // Lấy dữ liệu khi bấm sửa
        $(document).on('click', '.btn-edit', function () {
            var id = $(this).data('id');
            $.get('/Admin/SanPham/GetById/' + id, function (data) {
                $('#editMaSP').val(data.maSP);
                $('#editTenSP').val(data.tenSP);
                $('#editDonGia').val(data.donGia);
                $('#editSoLuong').val(data.soLuong);
                $('#editModal').modal('show');
            });
        });

        // Lưu chỉnh sửa
        $('#editForm').submit(function (e) {
            e.preventDefault();
            $.ajax({
                url: '/Admin/SanPham/Edit',
                type: 'POST',
                data: $(this).serialize(),
                success: function () {
                    Swal.fire('Thành công!', 'Cập nhật sản phẩm thành công.', 'success').then(() => {
                        location.reload();
                    });
                },
                error: function () {
                    Swal.fire('Lỗi!', 'Cập nhật thất bại.', 'error');
                }
            });
        });
    });
</script>
}
