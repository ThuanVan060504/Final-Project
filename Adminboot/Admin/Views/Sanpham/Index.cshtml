@model IEnumerable<Final_Project.Models.Shop.SanPham>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Quản lý sản phẩm";
}

<link rel="shortcut icon" type="image/x-icon" href="~/Admin/img/favicon.jpg">

<link rel="stylesheet" href="~/Admin/css/bootstrap.min.css">

<link rel="stylesheet" href="~/Admin/css/animate.css">

<link rel="stylesheet" href="~/Admin/plugins/select2/css/select2.min.css">

<link rel="stylesheet" href="~/Admin/css/dataTables.bootstrap4.min.css">

<link rel="stylesheet" href="~/Admin/plugins/fontawesome/css/fontawesome.min.css">
<link rel="stylesheet" href="~/Admin/plugins/fontawesome/css/all.min.css">

<link rel="stylesheet" href="~/Admin/css/style.css">

<style>
    .content-wrapper {
        margin-left: 260px;
        padding: 40px;
    }
  
    .dataTables_filter {
        text-align: center !important;
        margin-bottom: 15px;
    }

        .dataTables_filter label {
            width: 100%;
        }

        .dataTables_filter input {
            width: 100% !important;
            max-width: none !important;
            display: inline-block;
            margin-left: 0 !important;
        }

</style>

<div class="content-wrapper">
    <div class="container-fluid mt-4">
    <h2 class="mb-4 text-center">Danh sách sản phẩm</h2>

    <div class="d-flex justify-content-end mb-3">
        <a href="@Url.Action("Create", "SanPham", new { area = "Admin" })" class="btn btn-success">
            <i class="fas fa-plus"></i> Thêm sản phẩm
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th>Mã</th>
                    <th>Tên SP</th>
                    <th>Giá</th>
                    <th>Số lượng</th>
                    <th>Danh mục</th>
                    <th>Thương hiệu</th>
                    <th>Ảnh</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MaSP</td>
                        <td>@item.TenSP</td>
                        <td>@item.DonGia.ToString("N0") đ</td>
                        <td>@item.SoLuong</td>
                        <td>@item.DanhMuc?.TenDanhMuc</td>
                        <td>@item.ThuongHieu?.TenThuongHieu</td>
                        <td>
                            <img src="@item.ImageURL" width="60" class="img-thumbnail" />
                        </td>
                        <td>
                            <div class="d-flex gap-1 justify-content-center">
                                <button type="button" class="btn btn-warning btn-sm btn-edit" data-id="@item.MaSP">
                                    <i class="fas fa-edit"></i> Sửa
                                </button>

                                <form asp-area="Admin" asp-action="Delete" asp-route-id="@item.MaSP" method="post" class="m-0">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger btn-sm btn-delete">
                                        <i class="fas fa-trash"></i> Xóa
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</div>
<!-- Modal Edit -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="editForm">
                <div class="modal-header">
                    <h5 class="modal-title">Chỉnh sửa sản phẩm</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="editMaSP" name="MaSP" />

                    <div class="mb-3">
                        <label class="form-label">Tên sản phẩm</label>
                        <input type="text" id="editTenSP" name="TenSP" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Đơn giá</label>
                        <input type="number" id="editDonGia" name="DonGia" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Số lượng</label>
                        <input type="number" id="editSoLuong" name="SoLuong" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Script -->
<script src="~/Admin/js/jquery-3.6.0.min.js"></script>

<script src="~/Admin/js/feather.min.js"></script>

<script src="~/Admin/js/jquery.slimscroll.min.js"></script>

<script src="~/Admin/js/jquery.dataTables.min.js"></script>
<script src="~/Admin/js/dataTables.bootstrap4.min.js"></script>

<script src="~/Admin/js/bootstrap.bundle.min.js"></script>

<script src="~/Admin/plugins/select2/js/select2.min.js"></script>

<script src="~/Admin/plugins/sweetalert/sweetalert2.all.min.js"></script>
<script src="~/Admin/plugins/sweetalert/sweetalerts.min.js"></script>

<script src="~/Admin/js/script.js"></script>
<script>
    $(document).ready(function () {
        // Khởi tạo DataTable với phân trang 10 sản phẩm
            $('table').DataTable({
        pageLength: 10,
        lengthChange: false,
        language: {
            paginate: {
                previous: "Trước",
                next: "Sau"
            },
            search: "Tìm kiếm:",
            info: "Hiển thị _START_ đến _END_ của _TOTAL_ sản phẩm",
            infoEmpty: "Không có sản phẩm nào",
            zeroRecords: "Không tìm thấy sản phẩm"
        },
        initComplete: function () {
            // Di chuyển ô tìm kiếm lên trên bảng và full width
            $('.dataTables_filter').addClass('w-100');
        }
    });


        // Xóa với SweetAlert
        $(document).on('click', '.btn-delete', function (e) {
            e.preventDefault();
            var form = $(this).closest('form');
            Swal.fire({
                title: 'Xác nhận xóa?',
                text: "Dữ liệu sẽ bị xóa vĩnh viễn!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Xóa',
                cancelButtonText: 'Hủy'
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        });

        // Sửa sản phẩm
        $(document).on('click', '.btn-edit', function () {
            var id = $(this).data('id');
            $.get('/Admin/SanPham/GetById/' + id, function (data) {
                $('#editMaSP').val(data.maSP);
                $('#editTenSP').val(data.tenSP);
                $('#editDonGia').val(data.donGia);
                $('#editSoLuong').val(data.soLuong);
                $('#editModal').modal('show');
            });
        });

        // Lưu chỉnh sửa
        $('#editForm').submit(function (e) {
            e.preventDefault();
            $.ajax({
                url: '/Admin/SanPham/Edit',
                type: 'POST',
                data: $(this).serialize(),
                success: function () {
                    Swal.fire('Thành công!', 'Cập nhật sản phẩm thành công.', 'success').then(() => {
                        location.reload();
                    });
                },
                error: function () {
                    Swal.fire('Lỗi!', 'Cập nhật thất bại.', 'error');
                }
            });
        });
    });

</script>
