@model IEnumerable<Final_Project.Models.Shop.SanPham>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Quản lý sản phẩm";
}

<link rel="shortcut icon" type="image/x-icon" href="~/Admin/img/favicon.jpg">

<link rel="stylesheet" href="~/Admin/css/bootstrap.min.css">

<link rel="stylesheet" href="~/Admin/css/animate.css">

<link rel="stylesheet" href="~/Admin/plugins/select2/css/select2.min.css">

<link rel="stylesheet" href="~/Admin/css/dataTables.bootstrap4.min.css">

<link rel="stylesheet" href="~/Admin/plugins/fontawesome/css/fontawesome.min.css">
<link rel="stylesheet" href="~/Admin/plugins/fontawesome/css/all.min.css">

<link rel="stylesheet" href="~/Admin/css/style.css">
<div class="page-wrapper">
    <div class="content">   
        <div class="page-header">
            <div class="page-title">
                <h4>Danh Sách Sản Phẩm</h4>
                <h6>Quản lý sản phẩm trong kho</h6>
            </div>
            <div class="page-btn">
                <a href="@Url.Action("Create", "SanPham", new { area = "Admin" })" class="btn btn-added">
                    <i class="fa fa-plus me-1"></i> Thêm sản phẩm
                </a>
            </div>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        <div class="card">
            <div class="card-body">
                <!-- Bảng dữ liệu -->
                <div class="table-responsive">
                    <table class="table datanew">
                        <thead>
                            <tr>
                                <th>Mã</th>
                                <th>Tên SP</th>
                                <th>Giá</th>
                                <th>Số lượng</th>
                                <th>Danh mục</th>
                                <th>Thương hiệu</th>
                                <th>Ảnh</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.MaSP</td>
                                    <td>@item.TenSP</td>
                                    <td>@item.DonGia.ToString("N0") ₫</td>
                                    <td>@item.SoLuong</td>
                                    <td>@item.DanhMuc?.TenDanhMuc</td>
                                    <td>@item.ThuongHieu?.TenThuongHieu</td>
                                    <td class="productimgname">
                                        <a href="javascript:void(0);" class="product-img">
                                            <img src="@item.ImageURL" alt="product" width="40" height="40" />
                                        </a>
                                    </td>
                                    <td class="action-table-data">
                                        <div class="actions">
                                            <!-- Nút sửa -->
                                            <a class="btn btn-primary-light me-2 btn-edit" href="javascript:void(0);" data-id="@item.MaSP">
                                                <i class="fa fa-edit me-1"></i> Sửa
                                            </a>
                                            <!-- Nút xóa -->
                                            <form asp-area="Admin" asp-controller="SanPham" asp-action="Delete" asp-route-id="@item.MaSP" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-danger-light btn-delete">
                                                    <i class="fa fa-trash me-1"></i> Xóa
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Edit -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="editForm">
                <div class="modal-header">
                    <h5 class="modal-title">Chỉnh sửa sản phẩm</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="editMaSP" name="MaSP" />

                    <div class="mb-3">
                        <label class="form-label">Tên sản phẩm</label>
                        <input type="text" id="editTenSP" name="TenSP" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Đơn giá</label>
                        <input type="number" id="editDonGia" name="DonGia" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Số lượng</label>
                        <input type="number" id="editSoLuong" name="SoLuong" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Edit -->
