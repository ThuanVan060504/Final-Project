@model Final_Project.Models.Shop.SanPham
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Sửa sản phẩm";
}

<link rel="stylesheet" href="~/Admin/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/Admin/plugins/select2/css/select2.min.css" />
<link rel="stylesheet" href="~/Admin/css/style.css" />

<h2>Sửa sản phẩm</h2>
<div class="page-wrapper">
    <div class="content">
        <div class="page-header">
            <div class="page-title">
                <h4>Sửa sản phẩm</h4>
                <h6>Chỉnh sửa thông tin sản phẩm</h6>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <form asp-area="Admin" asp-controller="SanPham" asp-action="Edit" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="MaSP" value="@Model.MaSP" />

                    <div class="row">
                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Tên sản phẩm</label>
                                <input type="text" name="TenSP" class="form-control" value="@Model.TenSP" required />
                            </div>
                        </div>

                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Danh mục</label>
                                @Html.DropDownList("MaDanhMuc", (SelectList)ViewBag.DanhMucList, "Chọn danh mục", new { @class = "form-control select", @value = Model.MaDanhMuc })
                            </div>
                        </div>

                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Thương hiệu</label>
                                @Html.DropDownList("MaThuongHieu", (SelectList)ViewBag.ThuongHieuList, "Chọn thương hiệu", new { @class = "form-control select", @value = Model.MaThuongHieu })
                            </div>
                        </div>

                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Giá bán</label>
                                <input type="number" step="0.01" name="DonGia" class="form-control" value="@Model.DonGia" required />
                            </div>
                        </div>

                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Giá gốc</label>
                                <input type="number" step="0.01" name="GiaGoc" class="form-control" value="@Model.GiaGoc" />
                            </div>
                        </div>

                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Số lượng</label>
                                <input type="number" name="SoLuong" class="form-control" value="@Model.SoLuong" />
                            </div>
                        </div>

                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Chiều rộng (cm)</label>
                                <input type="number" step="0.01" name="ChieuRong" class="form-control" value="@Model.ChieuRong" />
                            </div>
                        </div>

                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Chiều cao (cm)</label>
                                <input type="number" step="0.01" name="ChieuCao" class="form-control" value="@Model.ChieuCao" />
                            </div>
                        </div>

                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Chiều sâu (cm)</label>
                                <input type="number" step="0.01" name="ChieuSau" class="form-control" value="@Model.ChieuSau" />
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Mô tả sản phẩm</label>
                                <textarea name="MoTa" class="form-control">@Model.MoTa</textarea>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Hình ảnh hiện tại</label><br />
                                <img src="@Model.ImageURL" alt="Ảnh sản phẩm" style="max-height: 150px;" />
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Thay đổi hình ảnh (Tải lên)</label>
                                <input type="file" name="Anh" class="form-control" />
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Hoặc đường dẫn ảnh mới</label>
                                <input type="text" name="ImageURL" class="form-control" placeholder="Nhập URL hình ảnh" />
                            </div>
                        </div>

                        <div class="col-lg-12 mt-3">
                            <button type="submit" class="btn btn-submit me-2">Lưu</button>
                            <a asp-area="Admin" asp-controller="SanPham" asp-action="Index" class="btn btn-cancel">Hủy</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/Admin/js/jquery-3.6.0.min.js"></script>
<script src="~/Admin/js/bootstrap.bundle.min.js"></script>
<script src="~/Admin/plugins/select2/js/select2.min.js"></script>
<script src="~/Admin/js/script.js"></script>
